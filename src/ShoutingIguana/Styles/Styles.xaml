<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- ========================================
         COLOR PALETTE - Modern Windows 11 Style
         ======================================== -->
    
    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#2B88D8"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#005A9E"/>
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="SurfaceAltBrush" Color="#F5F5F5"/>
    
    <!-- Text Colors (WCAG AA compliant) -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1F1F1F"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#5A5A5A"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="#757575"/>
    
    <!-- Semantic Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFB900"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
    <SolidColorBrush x:Key="InfoBrush" Color="#0078D4"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#E0E0E0"/>
    
    <!-- Hover/Focus Colors -->
    <SolidColorBrush x:Key="HoverBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="FocusBrush" Color="#0078D4"/>
    
    <!-- ========================================
         SPACING SYSTEM (4px base unit)
         ======================================== -->
    
    <Thickness x:Key="SpacingXS">4</Thickness>
    <Thickness x:Key="SpacingS">8</Thickness>
    <Thickness x:Key="SpacingM">16</Thickness>
    <Thickness x:Key="SpacingL">24</Thickness>
    <Thickness x:Key="SpacingXL">32</Thickness>
    <Thickness x:Key="SpacingXXL">48</Thickness>
    
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="SpacingXSValue">4</System:Double>
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="SpacingSValue">8</System:Double>
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="SpacingMValue">16</System:Double>
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="SpacingLValue">24</System:Double>
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="SpacingXLValue">32</System:Double>
    <System:Double xmlns:System="clr-namespace:System;assembly=mscorlib" x:Key="SpacingXXLValue">48</System:Double>
    
    <!-- ========================================
         TYPOGRAPHY SCALE
         ======================================== -->
    
    <!-- Display (28px) - Main headlines -->
    <Style x:Key="DisplayTextStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline3TextBlock}">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <!-- Title (20px) - Section headers -->
    <Style x:Key="TitleTextStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline6TextBlock}">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <!-- Body (14px) - Standard text -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <!-- Caption (12px) - Metadata -->
    <Style x:Key="CaptionTextStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignCaptionTextBlock}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
    </Style>
    
    <!-- ========================================
         BUTTON STYLES
         ======================================== -->
    
    <!-- Primary Button -->
    <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="24,10"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="md:ButtonAssist.CornerRadius" Value="4"/>
        <Setter Property="md:ElevationAssist.Elevation" Value="Dp2"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{StaticResource ModernFocusVisual}"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Secondary Button -->
    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Padding" Value="24,10"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="md:ButtonAssist.CornerRadius" Value="4"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{StaticResource ModernFocusVisual}"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Danger Button -->
    <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="24,10"/>
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="md:ButtonAssist.CornerRadius" Value="4"/>
        <Setter Property="md:ElevationAssist.Elevation" Value="Dp2"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FocusVisualStyle" Value="{StaticResource ModernFocusVisual}"/>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Large Button (for prominent actions) -->
    <Style x:Key="LargeButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Height" Value="48"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Padding" Value="32,12"/>
    </Style>
    
    <!-- ========================================
         CARD STYLES
         ======================================== -->
    
    <!-- Standard Card -->
    <Style x:Key="StandardCard" TargetType="md:Card">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="md:ElevationAssist.Elevation" Value="Dp2"/>
        <Setter Property="UniformCornerRadius" Value="8"/>
        <Setter Property="Padding" Value="{StaticResource SpacingL}"/>
        <Setter Property="Margin" Value="0"/>
    </Style>
    
    <!-- Metric Card (for dashboard stats) -->
    <Style x:Key="MetricCard" TargetType="md:Card" BasedOn="{StaticResource StandardCard}">
        <Setter Property="Padding" Value="{StaticResource SpacingM}"/>
        <Setter Property="md:ElevationAssist.Elevation" Value="Dp1"/>
    </Style>
    
    <!-- Info Card (for notices/hints) -->
    <Style x:Key="InfoCard" TargetType="md:Card" BasedOn="{StaticResource StandardCard}">
        <Setter Property="Background" Value="#E3F2FD"/>
        <Setter Property="md:ElevationAssist.Elevation" Value="Dp0"/>
    </Style>
    
    <!-- ========================================
         INPUT STYLES
         ======================================== -->
    
    <!-- Text Box -->
    <Style x:Key="StandardTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="md:TextFieldAssist.HasClearButton" Value="True"/>
        <Setter Property="md:TextFieldAssist.UnderlineBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="FocusVisualStyle" Value="{StaticResource ModernFocusVisual}"/>
    </Style>
    
    <!-- CheckBox -->
    <Style x:Key="StandardCheckBox" TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
        <Setter Property="FocusVisualStyle" Value="{StaticResource ModernFocusVisual}"/>
    </Style>
    
    <!-- ========================================
         DATAGRID STYLES
         ======================================== -->
    
    <!-- Enhanced DataGrid -->
    <Style x:Key="ModernDataGrid" TargetType="DataGrid" BasedOn="{StaticResource MaterialDesignDataGrid}">
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="RowHeight" Value="40"/>
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="ColumnHeaderHeight" Value="44"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="RowStyle">
            <Setter.Value>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="ColumnHeaderStyle">
            <Setter.Value>
                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                    <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Padding" Value="12,10"/>
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- ========================================
         PROGRESS BAR STYLES
         ======================================== -->
    
    <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
        <Setter Property="Height" Value="12"/>
        <Setter Property="Background" Value="{StaticResource SurfaceAltBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            ClipToBounds="True">
                        <Border Name="PART_Track">
                            <Grid>
                                <Border Name="PART_Indicator"
                                        HorizontalAlignment="Left"
                                        Background="{TemplateBinding Foreground}"
                                        CornerRadius="6">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#0078D4" 
                                                          BlurRadius="8" 
                                                          ShadowDepth="0" 
                                                          Opacity="0.3"/>
                                    </Border.Effect>
                                </Border>
                            </Grid>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- ========================================
         SEVERITY BADGE STYLES
         ======================================== -->
    
    <Style x:Key="SeverityBadge" TargetType="Border">
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <Style x:Key="ErrorSeverityBadge" TargetType="Border" BasedOn="{StaticResource SeverityBadge}">
        <Setter Property="Background" Value="#FFEBEE"/>
        <Style.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
        </Style.Resources>
    </Style>
    
    <Style x:Key="WarningSeverityBadge" TargetType="Border" BasedOn="{StaticResource SeverityBadge}">
        <Setter Property="Background" Value="#FFF8E1"/>
        <Style.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
        </Style.Resources>
    </Style>
    
    <Style x:Key="InfoSeverityBadge" TargetType="Border" BasedOn="{StaticResource SeverityBadge}">
        <Setter Property="Background" Value="#E3F2FD"/>
        <Style.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource InfoBrush}"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
        </Style.Resources>
    </Style>
    
    <!-- ========================================
         STATUS BADGE STYLES
         ======================================== -->
    
    <Style x:Key="StatusBadge" TargetType="Border">
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="10,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <Style x:Key="ActiveStatusBadge" TargetType="Border" BasedOn="{StaticResource StatusBadge}">
        <Setter Property="Background" Value="#E8F5E9"/>
        <Style.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
        </Style.Resources>
    </Style>
    
    <Style x:Key="LoadedStatusBadge" TargetType="Border" BasedOn="{StaticResource StatusBadge}">
        <Setter Property="Background" Value="#E3F2FD"/>
        <Style.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource InfoBrush}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
        </Style.Resources>
    </Style>
    
    <!-- ========================================
         HIGH CONTRAST MODE SUPPORT
         ======================================== -->
    
    <!-- Fallback brushes for High Contrast themes -->
    <SolidColorBrush x:Key="HighContrastTextBrush" Color="{DynamicResource {x:Static SystemColors.WindowTextColor}}"/>
    <SolidColorBrush x:Key="HighContrastBackgroundBrush" Color="{DynamicResource {x:Static SystemColors.WindowColor}}"/>
    <SolidColorBrush x:Key="HighContrastAccentBrush" Color="{DynamicResource {x:Static SystemColors.HighlightColor}}"/>
    
    <!-- ========================================
         FOCUS VISUAL STYLES (Enhanced)
         ======================================== -->
    
    <Style x:Key="ModernFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle StrokeThickness="2"
                               Stroke="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
                               StrokeDashArray="0"
                               SnapsToDevicePixels="True"
                               RadiusX="2"
                               RadiusY="2"
                               Margin="0"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Focus visual for cards and containers -->
    <Style x:Key="CardFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle StrokeThickness="3"
                               Stroke="{StaticResource FocusBrush}"
                               SnapsToDevicePixels="True"
                               RadiusX="8"
                               RadiusY="8"
                               Margin="-3">
                        <Rectangle.Effect>
                            <DropShadowEffect Color="#0078D4" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                        </Rectangle.Effect>
                    </Rectangle>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- ========================================
         DIVIDER STYLES
         ======================================== -->
    
    <Style x:Key="HorizontalDivider" TargetType="Separator">
        <Setter Property="Background" Value="{StaticResource DividerBrush}"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="0,16"/>
    </Style>
    
    <!-- ========================================
         TOOLBAR STYLES
         ======================================== -->
    
    <Style x:Key="ToolbarPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>
    
    <!-- ========================================
         COMBOBOX STYLES
         ======================================== -->
    
    <Style x:Key="StandardComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="md:TextFieldAssist.UnderlineBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="FocusVisualStyle" Value="{StaticResource ModernFocusVisual}"/>
    </Style>
    
    <!-- ========================================
         LOADING & BUSY INDICATORS
         ======================================== -->
    
    <Style x:Key="LoadingOverlay" TargetType="Grid">
        <Setter Property="Background" Value="#80FFFFFF"/>
        <Setter Property="Panel.ZIndex" Value="999"/>
    </Style>
    
    <!-- ========================================
         ERROR & MESSAGE STYLES
         ======================================== -->
    
    <!-- Error Message Card -->
    <Style x:Key="ErrorMessageCard" TargetType="md:Card" BasedOn="{StaticResource StandardCard}">
        <Setter Property="Background" Value="#FFEBEE"/>
        <Setter Property="md:ElevationAssist.Elevation" Value="Dp0"/>
        <Setter Property="UniformCornerRadius" Value="6"/>
        <Setter Property="Padding" Value="{StaticResource SpacingM}"/>
    </Style>
    
    <!-- Warning Message Card -->
    <Style x:Key="WarningMessageCard" TargetType="md:Card" BasedOn="{StaticResource StandardCard}">
        <Setter Property="Background" Value="#FFF8E1"/>
        <Setter Property="md:ElevationAssist.Elevation" Value="Dp0"/>
        <Setter Property="UniformCornerRadius" Value="6"/>
        <Setter Property="Padding" Value="{StaticResource SpacingM}"/>
    </Style>
    
    <!-- Success Message Card -->
    <Style x:Key="SuccessMessageCard" TargetType="md:Card" BasedOn="{StaticResource StandardCard}">
        <Setter Property="Background" Value="#E8F5E9"/>
        <Setter Property="md:ElevationAssist.Elevation" Value="Dp0"/>
        <Setter Property="UniformCornerRadius" Value="6"/>
        <Setter Property="Padding" Value="{StaticResource SpacingM}"/>
    </Style>
    
    <!-- ========================================
         EMPTY STATE STYLES
         ======================================== -->
    
    <Style x:Key="EmptyStateContainer" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="{StaticResource SpacingXXL}"/>
    </Style>
    
    <Style x:Key="EmptyStateIcon" TargetType="md:PackIcon">
        <Setter Property="Width" Value="64"/>
        <Setter Property="Height" Value="64"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>
    
    <Style x:Key="EmptyStateTitle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextStyle}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    
    <Style x:Key="EmptyStateMessage" TargetType="TextBlock" BasedOn="{StaticResource BodyTextStyle}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="MaxWidth" Value="400"/>
    </Style>
    
    <!-- ========================================
         ANIMATION STYLES
         ======================================== -->
    
    <!-- Fade In Animation -->
    <Storyboard x:Key="FadeInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1" Duration="0:0:0.3"
                         DecelerationRatio="0.7"/>
    </Storyboard>
    
    <!-- Slide Up Animation -->
    <Storyboard x:Key="SlideUpAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                         From="20" To="0" Duration="0:0:0.3"
                         DecelerationRatio="0.7"/>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1" Duration="0:0:0.3"
                         DecelerationRatio="0.7"/>
    </Storyboard>

</ResourceDictionary>

