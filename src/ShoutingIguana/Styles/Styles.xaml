    <!-- Skeleton Row for DataGrids -->
    <Style x:Key="SkeletonRow" TargetType="Border">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="#F0F0F0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
    </Style>
    
    <!-- Skeleton Cell (column placeholder) -->
    <Style x:Key="SkeletonCell" TargetType="Rectangle">
        <Setter Property="Fill" Value="#E0E0E0"/>
        <Setter Property="RadiusX" Value="2"/>
        <Setter Property="RadiusY" Value="2"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>
    
    <!-- ========================================
         GRIDSPLITTER STYLE
         ======================================== -->
    
    <Style x:Key="ModernGridSplitter" TargetType="GridSplitter">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GridSplitter">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True">
                        <Border x:Name="indicator"
                                Background="{StaticResource BorderLightBrush}"
                                Height="2"
                                VerticalAlignment="Center"
                                Margin="32,0"
                                CornerRadius="1"
                                Opacity="0"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                            <Setter TargetName="indicator" Property="Opacity" Value="1"/>
                            <Setter TargetName="indicator" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                        </Trigger>
                        <Trigger Property="IsDragging" Value="True">
                            <Setter TargetName="indicator" Property="Opacity" Value="1"/>
                            <Setter TargetName="indicator" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                            <Setter TargetName="indicator" Property="Height" Value="3"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- ========================================
         ANIMATION DURATIONS & EASING
         ======================================== -->
    
    <Duration x:Key="FastAnimation">0:0:0.15</Duration>
    <Duration x:Key="MediumAnimation">0:0:0.2</Duration>
    <Duration x:Key="SlowAnimation">0:0:0.3</Duration>
    
    <!-- Easing Functions -->
    <CubicEase x:Key="EaseOut" EasingMode="EaseOut"/>
    <CubicEase x:Key="EaseInOut" EasingMode="EaseInOut"/>
    <QuadraticEase x:Key="QuadraticEaseOut" EasingMode="EaseOut"/>
    
    <!-- ========================================
         ANIMATION STORYBOARDS
         ======================================== -->
    
    <!-- Note: Button scale animations are implemented directly in button style triggers -->
    <!-- Future animations can be added here as reusable storyboard resources -->

    <!-- ========================================
         RESPONSIVE LAYOUT HELPERS
         ======================================== -->
    
    <!-- Min/Max Width Constraints for Main Content -->
    <sys:Double x:Key="ContentMinWidth">650</sys:Double>
    <sys:Double x:Key="ContentMaxWidth">1200</sys:Double>
    <sys:Double x:Key="FormMaxWidth">900</sys:Double>
    <sys:Double x:Key="DialogMaxWidth">1000</sys:Double>
    
    <!-- Page Container Style -->
    <Style x:Key="PageContainer" TargetType="Grid">
        <Setter Property="Margin" Value="{StaticResource SpacingL}"/>
    </Style>
    
    <!-- Responsive Card Grid (for dashboard cards) -->
    <Style x:Key="ResponsiveCardGrid" TargetType="Grid">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- ========================================
         ENHANCED ACCESSIBILITY
         ======================================== -->
    
    <!-- Screen Reader Only Style (for hidden labels) -->
    <Style x:Key="ScreenReaderOnly" TargetType="TextBlock">
        <Setter Property="Width" Value="1"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="-1"/>
        <Setter Property="Clip">
            <Setter.Value>
                <RectangleGeometry Rect="0,0,1,1"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Opacity" Value="0"/>
    </Style>

</ResourceDictionary>
