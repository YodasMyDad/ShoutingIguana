<UserControl x:Class="ShoutingIguana.Views.ProjectHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:config="clr-namespace:ShoutingIguana.Core.Configuration;assembly=ShoutingIguana.Core"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <!-- Loading Overlay (during initialization) -->
        <Grid Style="{StaticResource LoadingOverlay}"
              Visibility="{Binding DataContext.IsInitializing, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Padding="48" 
                    MaxWidth="450"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                      BlurRadius="32" 
                                      ShadowDepth="8" 
                                      Opacity="0.15"/>
                </Border.Effect>
                
                <StackPanel>
                    <!-- Animated Settings Icon -->
                    <TextBlock Text="{StaticResource Icon.Cog}"
                               Style="{StaticResource Icon}"
                               Width="48" 
                               Height="48"
                               FontSize="48"
                               Foreground="{StaticResource PrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,24"
                               RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <RotateTransform />
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                         From="0" To="360" Duration="0:0:2"
                                                         RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    
                    <!-- Title -->
                    <TextBlock Text="Initializing Application" 
                               Style="{StaticResource TitleTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"
                               AutomationProperties.LiveSetting="Polite"/>
                    
                    <!-- Subtitle -->
                    <TextBlock Text="Setting up Playwright and plugins..." 
                               Style="{StaticResource BodyTextStyle}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,24"/>
                    
                    <!-- Progress Bar -->
                    <ProgressBar IsIndeterminate="True" 
                                 Height="4"
                                 Style="{StaticResource ModernProgressBar}"
                                 Margin="0"/>
                    
                    <!-- Status Text -->
                    <TextBlock Text="This may take a moment on first run" 
                               Style="{StaticResource CaptionTextStyle}"
                               Foreground="{StaticResource TextTertiaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Welcome Screen -->
        <Grid Visibility="{Binding IsWelcomeScreen, Converter={StaticResource BooleanToVisibilityConverter}}"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            
            <Border Padding="48" 
                    Margin="16" 
                    MaxWidth="500"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                      BlurRadius="24" 
                                      ShadowDepth="4" 
                                      Opacity="0.08"/>
                </Border.Effect>
                <Border.RenderTransform>
                    <TranslateTransform/>
                </Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                 From="20" To="0" Duration="0:0:0.4"
                                                 DecelerationRatio="0.7"/>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1" Duration="0:0:0.4"
                                                 DecelerationRatio="0.7"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                
                <StackPanel>
                    <Image Source="/Assets/logo.png" 
                           Width="96" 
                           Height="96"
                           Margin="0,0,0,24"
                           HorizontalAlignment="Center"/>
                    
                    <TextBlock Text="Shouting Iguana" 
                               Style="{StaticResource DisplayTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>
                    
                    <TextBlock Text="Professional Web Crawler &amp; SEO Analysis Tool" 
                               Style="{StaticResource BodyTextStyle}"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,40"/>
                    
                    <Button Content="New Project"
                            Command="{Binding NewProjectCommand}"
                            Style="{StaticResource LargeButton}"
                            Margin="0,0,0,12"
                            AutomationProperties.Name="Create New Project"
                            ToolTip="Create a new web crawling project"/>
                    
                    <Button Content="Open Project"
                            Command="{Binding OpenProjectCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Height="48"
                            Margin="0,0,0,32"
                            AutomationProperties.Name="Open Existing Project"
                            ToolTip="Open an existing project file"/>
                    
                    <TextBlock Text="Recent Projects"
                               Style="{StaticResource TitleTextStyle}"
                               FontSize="16"
                               Margin="0,0,0,12"
                               AutomationProperties.HeadingLevel="Level2"/>
                    
                    <Border Background="{StaticResource SurfaceAltBrush}"
                            CornerRadius="6"
                            Padding="16"
                            MinHeight="80">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="{StaticResource Icon.Folder}"
                                       Style="{StaticResource Icon}"
                                       Width="20" 
                                       Height="20"
                                       FontSize="20"
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="No recent projects"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       FontStyle="Italic"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Project Settings Screen -->
        <ScrollViewer Visibility="{Binding IsWelcomeScreen, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                      VerticalScrollBarVisibility="Auto"
                      Padding="{StaticResource SpacingL}">
            <Border Padding="40" 
                    Margin="16"
                    MaxWidth="900"
                    HorizontalAlignment="Center"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Project Settings"
                               Style="{StaticResource TitleTextStyle}"
                               Margin="0,0,0,32"
                               AutomationProperties.HeadingLevel="Level1"/>

                    <!-- Basic Information Section -->
                    <TextBlock Text="Basic Information" 
                               Style="{StaticResource FormSectionHeader}"
                               Margin="0,0,0,16"
                               AutomationProperties.HeadingLevel="Level2"/>

                    <!-- Project Name -->
                    <StackPanel Style="{StaticResource InputContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Project Name" 
                                       Style="{StaticResource FormFieldLabel}"/>
                            <TextBlock Style="{StaticResource RequiredIndicator}"/>
                        </StackPanel>
                        <TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 TabIndex="0"
                                 AutomationProperties.Name="Project Name"/>
                        <TextBlock Text="Enter a descriptive name for your project to easily identify it later."
                                   Style="{StaticResource HelperText}"/>
                    </StackPanel>

                    <!-- Base URL -->
                    <StackPanel Style="{StaticResource InputContainer}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Starting URL" 
                                       Style="{StaticResource FormFieldLabel}"/>
                            <TextBlock Style="{StaticResource RequiredIndicator}"/>
                        </StackPanel>
                        <TextBox Text="{Binding BaseUrl, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource ModernTextBox}"
                                 TabIndex="1"
                                 AutomationProperties.Name="Starting URL"/>
                        <TextBlock Text="The URL where the crawl will begin (e.g., https://example.com). Must be a valid HTTP or HTTPS URL."
                                   Style="{StaticResource HelperText}"/>
                    </StackPanel>

                    <!-- Crawl Settings Section -->
                    <TextBlock Text="Crawl Configuration"
                               Style="{StaticResource FormSectionHeader}"
                               AutomationProperties.HeadingLevel="Level2"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Max Depth -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource InputContainer}">
                            <TextBlock Text="Maximum Depth" 
                                       Style="{StaticResource FormFieldLabel}"/>
                            <TextBox Text="{Binding MaxDepth, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"
                                     TabIndex="2"
                                     AutomationProperties.Name="Maximum Crawl Depth"/>
                            <TextBlock Text="Maximum clicks from start URL (1-20)."
                                       Style="{StaticResource HelperText}"/>
                        </StackPanel>

                        <!-- Max URLs -->
                        <StackPanel Grid.Row="0" Grid.Column="2" Style="{StaticResource InputContainer}">
                            <TextBlock Text="Maximum URLs" 
                                       Style="{StaticResource FormFieldLabel}"/>
                            <TextBox Text="{Binding MaxUrls, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"
                                     TabIndex="3"
                                     AutomationProperties.Name="Maximum URLs to Crawl"/>
                            <TextBlock Text="Total URLs to crawl (0 = unlimited)."
                                       Style="{StaticResource HelperText}"/>
                        </StackPanel>

                        <!-- Crawl Delay -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Style="{StaticResource InputContainer}">
                            <TextBlock Text="Crawl Delay" 
                                       Style="{StaticResource FormFieldLabel}"/>
                            <TextBox Text="{Binding CrawlDelay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"
                                     TabIndex="4"
                                     AutomationProperties.Name="Crawl Delay in Seconds"/>
                            <TextBlock Text="Delay between requests in seconds."
                                       Style="{StaticResource HelperText}"/>
                        </StackPanel>

                        <!-- User Agent -->
                        <StackPanel Grid.Row="1" Grid.Column="2" Style="{StaticResource InputContainer}">
                            <TextBlock Text="Browser User Agent" 
                                       Style="{StaticResource FormFieldLabel}"/>
                            <ComboBox SelectedItem="{Binding SelectedUserAgentType}"
                                      Style="{StaticResource ModernComboBox}"
                                      TabIndex="5"
                                      AutomationProperties.Name="Browser User Agent Type">
                                <ComboBox.ItemsSource>
                                    <x:Array Type="{x:Type config:UserAgentType}">
                                        <config:UserAgentType>Chrome</config:UserAgentType>
                                        <config:UserAgentType>Firefox</config:UserAgentType>
                                        <config:UserAgentType>Edge</config:UserAgentType>
                                        <config:UserAgentType>Safari</config:UserAgentType>
                                        <config:UserAgentType>Random</config:UserAgentType>
                                    </x:Array>
                                </ComboBox.ItemsSource>
                            </ComboBox>
                            <TextBlock Text="Browser to emulate during crawl."
                                       Style="{StaticResource HelperText}"/>
                        </StackPanel>

                        <!-- Checkboxes -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,12,0,0">
                            <CheckBox Content="Follow robots.txt exclusion rules"
                                      IsChecked="{Binding RespectRobotsTxt}"
                                      FontSize="14"
                                      Margin="0,0,0,8"
                                      TabIndex="6"
                                      AutomationProperties.Name="Respect Robots.txt"/>
                            <TextBlock Text="Recommended for ethical crawling. Respects website owner's crawling preferences."
                                       Style="{StaticResource HelperText}"
                                       Margin="32,0,0,16"/>

                            <CheckBox Content="Discover URLs from sitemap.xml"
                                      IsChecked="{Binding UseSitemapXml}"
                                      FontSize="14"
                                      Margin="0,0,0,8"
                                      TabIndex="7"
                                      AutomationProperties.Name="Use Sitemap XML"/>
                            <TextBlock Text="Automatically checks robots.txt and common locations for sitemap.xml to discover URLs."
                                       Style="{StaticResource HelperText}"
                                       Margin="32,0,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,40,0,0" 
                                HorizontalAlignment="Right">
                        <Button Content="Save Settings"
                                Command="{Binding SaveSettingsCommand}"
                                Style="{StaticResource SecondaryButton}"
                                Margin="0,0,12,0"
                                TabIndex="8"
                                Visibility="{Binding CurrentProject, Converter={StaticResource NullToVisibilityConverter}}"
                                AutomationProperties.Name="Save Project Settings"
                                ToolTip="Save changes to project settings"/>
                        <Button Command="{Binding StartCrawlCommand}"
                                Style="{StaticResource PrimaryButton}"
                                TabIndex="9"
                                IsDefault="True"
                                AutomationProperties.Name="Start Crawl"
                                ToolTip="Begin crawling with current settings">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{StaticResource Icon.Play}"
                                           Style="{StaticResource Icon}"
                                           Width="18" 
                                           Height="18"
                                           FontSize="18"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Start Crawl" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
