<UserControl x:Class="ShoutingIguana.Views.ProjectHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:config="clr-namespace:ShoutingIguana.Core.Configuration;assembly=ShoutingIguana.Core"
             Background="{StaticResource BackgroundBrush}">
    
    <Grid KeyboardNavigation.TabNavigation="Local">
        <!-- Loading Overlay (during initialization) -->
        <Grid Style="{StaticResource LoadingOverlay}"
              Visibility="{Binding DataContext.IsInitializing, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource BooleanToVisibilityConverter}}"
              KeyboardNavigation.TabNavigation="None"
              Focusable="False">
            <Border Padding="{StaticResource SpacingXl}" 
                    MaxWidth="450"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="12"
                    SnapsToDevicePixels="True">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                      BlurRadius="32" 
                                      ShadowDepth="8" 
                                      Opacity="0.15"/>
                </Border.Effect>
                
                <StackPanel>
                    <!-- Animated Settings Icon -->
                    <TextBlock Text="{StaticResource Icon.Cog}"
                               Style="{StaticResource Icon}"
                               Width="48" 
                               Height="48"
                               FontSize="48"
                               Foreground="{StaticResource PrimaryBrush}"
                               Margin="0,0,0,24"
                               RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <RotateTransform />
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                         From="0" To="360" Duration="0:0:2"
                                                         RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    
                    <!-- Title -->
                    <TextBlock Text="Initializing Application" 
                               Style="{StaticResource TitleTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="{StaticResource SpacingS}"
                               AutomationProperties.LiveSetting="Polite"
                               AutomationProperties.HeadingLevel="Level1"/>
                    
                    <!-- Subtitle -->
                    <TextBlock Text="Setting up crawler and plugins..." 
                               Style="{StaticResource BodyTextStyle}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="{StaticResource SpacingL}"/>
                    
                    <!-- Status Text -->
                    <TextBlock Text="This may take a moment on first run" 
                               Style="{StaticResource CaptionTextStyle}"
                               Foreground="{StaticResource TextTertiaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="{StaticResource SpacingM}"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Welcome Screen -->
        <Grid Visibility="{Binding IsWelcomeScreen, Converter={StaticResource BooleanToVisibilityConverter}}"
              HorizontalAlignment="Center"
              VerticalAlignment="Center"
              KeyboardNavigation.TabNavigation="Local">
            
            <Border Padding="{StaticResource SpacingXl}" 
                    Margin="{StaticResource SpacingM}" 
                    MaxWidth="500"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="12"
                    SnapsToDevicePixels="True">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                      BlurRadius="24" 
                                      ShadowDepth="4" 
                                      Opacity="0.08"/>
                </Border.Effect>
                <Border.RenderTransform>
                    <TranslateTransform/>
                </Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                 From="20" To="0" Duration="0:0:0.4"
                                                 DecelerationRatio="0.7"/>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 From="0" To="1" Duration="0:0:0.4"
                                                 DecelerationRatio="0.7"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                
                <StackPanel KeyboardNavigation.TabNavigation="Local">
                    <Image Source="/Assets/logo.png" 
                           Width="96" 
                           Height="96"
                           Margin="{StaticResource SpacingL}"
                           HorizontalAlignment="Center"
                           SnapsToDevicePixels="True"
                           AutomationProperties.Name="Shouting Iguana Logo"/>
                    
                    <TextBlock Text="Shouting Iguana" 
                               Style="{StaticResource DisplayTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="{StaticResource SpacingS}"
                               AutomationProperties.HeadingLevel="Level1"/>
                    
                    <TextBlock Text="Professional Web Crawler &amp; SEO Analysis Tool" 
                               Style="{StaticResource BodyTextStyle}"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,40"/>
                    
                    <Button Content="New Project"
                            Command="{Binding NewProjectCommand}"
                            Style="{StaticResource LargeButton}"
                            Margin="{StaticResource SpacingM}"
                            TabIndex="0"
                            IsDefault="True"
                            AutomationProperties.Name="Create New Project"
                            AutomationProperties.HelpText="Creates a new web crawling project and opens project settings"
                            ToolTip="Create a new web crawling project (Ctrl+N)"/>
                    
                    <Button Content="Open Project"
                            Command="{Binding OpenProjectCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Height="48"
                            Margin="0,0,0,32"
                            TabIndex="1"
                            AutomationProperties.Name="Open Existing Project"
                            AutomationProperties.HelpText="Opens an existing project file from disk"
                            ToolTip="Open an existing project file (Ctrl+O)"/>
                    
                    <TextBlock Text="Recent Projects"
                               Style="{StaticResource TitleTextStyle}"
                               FontSize="16"
                               Margin="{StaticResource SpacingM}"
                               AutomationProperties.HeadingLevel="Level2"/>
                    
                    <Border Background="{StaticResource SurfaceAltBrush}"
                            CornerRadius="6"
                            Padding="{StaticResource SpacingM}"
                            MinHeight="80"
                            SnapsToDevicePixels="True">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="{StaticResource Icon.Folder}"
                                       Style="{StaticResource Icon}"
                                       Width="20" 
                                       Height="20"
                                       FontSize="20"
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="No recent projects"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       FontStyle="Italic"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Project Settings Screen with Tabs -->
        <Grid Visibility="{Binding IsWelcomeScreen, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
              Margin="{StaticResource SpacingL}"
              KeyboardNavigation.TabNavigation="Local">
            <Border Background="{StaticResource SurfaceBrush}"
                    CornerRadius="12"
                    SnapsToDevicePixels="True"
                    Padding="0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="16" ShadowDepth="4" Opacity="0.08"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Border Grid.Row="0"
                            Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderLightBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="32"
                            CornerRadius="12,12,0,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Border Background="{StaticResource PrimaryBrush}"
                                        Width="44" Height="44"
                                        CornerRadius="8"
                                        Margin="0,0,16,0">
                                    <TextBlock Text="{StaticResource Icon.Settings}"
                                               Style="{StaticResource Icon}"
                                               FontSize="22"
                                               Foreground="White"/>
                                </Border>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Project Setup"
                                               Style="{StaticResource TitleTextStyle}"
                                               Margin="0"
                                               AutomationProperties.HeadingLevel="Level1"/>
                                    <TextBlock Text="Configure your web crawling project and custom data extraction"
                                               Style="{StaticResource BodyTextStyle}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Tabbed Content -->
                    <TabControl Grid.Row="1"
                                Style="{StaticResource StandardTabControl}"
                                SelectedIndex="{Binding SelectedTabIndex}"
                                KeyboardNavigation.TabNavigation="Local">
                        
                        <!-- Settings Tab -->
                        <TabItem>
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{StaticResource Icon.Settings}"
                                               Style="{StaticResource Icon}"
                                               FontSize="16"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Settings" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </TabItem.Header>
                            
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32,24">
                                <StackPanel MaxWidth="850">

                    <!-- Basic Information Section -->
                    <Border Background="{StaticResource SurfaceAltBrush}"
                            CornerRadius="8"
                            Padding="20"
                            Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="Basic Information" 
                                       Style="{StaticResource FormSectionHeader}"
                                       Margin="0,0,0,16"
                                       AutomationProperties.HeadingLevel="Level2"/>

                            <!-- Project Name -->
                            <StackPanel Margin="0,0,0,16">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Project Name" 
                                               Style="{StaticResource FormFieldLabel}"
                                               AutomationProperties.AutomationId="ProjectNameLabel"/>
                                    <TextBlock Style="{StaticResource RequiredIndicator}"/>
                                </StackPanel>
                                <TextBox Text="{Binding ProjectName, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         TabIndex="0"
                                         AutomationProperties.Name="Project Name"
                                         AutomationProperties.IsRequiredForForm="True"
                                         ToolTip="Enter a descriptive name for your project">
                                    <TextBox.Tag>e.g., My Website Audit</TextBox.Tag>
                                </TextBox>
                                <TextBlock Text="Enter a descriptive name for your project to easily identify it later."
                                           Style="{StaticResource HelperText}"/>
                            </StackPanel>

                            <!-- Base URL -->
                            <StackPanel Margin="0,0,0,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="Starting URL" 
                                               Style="{StaticResource FormFieldLabel}"
                                               AutomationProperties.AutomationId="StartingUrlLabel"/>
                                    <TextBlock Style="{StaticResource RequiredIndicator}"/>
                                </StackPanel>
                                <TextBox Text="{Binding BaseUrl, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         TabIndex="1"
                                         AutomationProperties.Name="Starting URL"
                                         AutomationProperties.IsRequiredForForm="True"
                                         ToolTip="The URL where the crawl will begin">
                                    <TextBox.Tag>https://example.com</TextBox.Tag>
                                </TextBox>
                                <TextBlock Text="The URL where the crawl will begin (e.g., https://example.com). Must be a valid HTTP or HTTPS URL."
                                           Style="{StaticResource HelperText}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Crawl Configuration Section -->
                    <Border Background="{StaticResource SurfaceAltBrush}"
                            CornerRadius="8"
                            Padding="20"
                            Margin="0,0,0,24">
                        <StackPanel>
                            <TextBlock Text="Crawl Configuration"
                                       Style="{StaticResource FormSectionHeader}"
                                       Margin="0,0,0,16"
                                       AutomationProperties.HeadingLevel="Level2"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Max Depth -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,16">
                                    <TextBlock Text="Maximum Depth" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"
                                               AutomationProperties.AutomationId="MaxDepthLabel"/>
                                    <TextBox Text="{Binding MaxDepth, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="2"
                                             AutomationProperties.Name="Maximum Crawl Depth"
                                             ToolTip="Maximum clicks from start URL (1-20)">
                                        <TextBox.Tag>e.g., 5</TextBox.Tag>
                                    </TextBox>
                                    <TextBlock Text="Maximum clicks from start URL (1-20)."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Max URLs -->
                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,16">
                                    <TextBlock Text="Maximum URLs" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"
                                               AutomationProperties.AutomationId="MaxUrlsLabel"/>
                                    <TextBox Text="{Binding MaxUrls, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="3"
                                             AutomationProperties.Name="Maximum URLs to Crawl"
                                             ToolTip="Total URLs to crawl (0 = unlimited)">
                                        <TextBox.Tag>e.g., 1000</TextBox.Tag>
                                    </TextBox>
                                    <TextBlock Text="Total URLs to crawl (0 = unlimited)."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Crawl Delay -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,16">
                                    <TextBlock Text="Crawl Delay" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"
                                               AutomationProperties.AutomationId="CrawlDelayLabel"/>
                                    <TextBox Text="{Binding CrawlDelay, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="4"
                                             AutomationProperties.Name="Crawl Delay in Seconds"
                                             ToolTip="Delay between requests in seconds">
                                        <TextBox.Tag>e.g., 1.5</TextBox.Tag>
                                    </TextBox>
                                    <TextBlock Text="Delay between requests in seconds."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- User Agent -->
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,16">
                                    <TextBlock Text="Browser User Agent" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"
                                               AutomationProperties.AutomationId="UserAgentLabel"/>
                                    <ComboBox SelectedItem="{Binding SelectedUserAgentType}"
                                              Style="{StaticResource ModernComboBox}"
                                              TabIndex="5"
                                              AutomationProperties.Name="Browser User Agent Type"
                                              ToolTip="Browser to emulate during crawl">
                                        <ComboBox.ItemsSource>
                                            <x:Array Type="{x:Type config:UserAgentType}">
                                                <config:UserAgentType>Chrome</config:UserAgentType>
                                                <config:UserAgentType>Firefox</config:UserAgentType>
                                                <config:UserAgentType>Edge</config:UserAgentType>
                                                <config:UserAgentType>Safari</config:UserAgentType>
                                                <config:UserAgentType>Random</config:UserAgentType>
                                            </x:Array>
                                        </ComboBox.ItemsSource>
                                    </ComboBox>
                                    <TextBlock Text="Browser to emulate during crawl."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Concurrent Requests -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,16">
                                    <TextBlock Text="Concurrent Requests" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"
                                               AutomationProperties.AutomationId="ConcurrentRequestsLabel"/>
                                    <TextBox Text="{Binding ConcurrentRequests, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="6"
                                             AutomationProperties.Name="Concurrent Requests"
                                             ToolTip="Number of parallel requests (1-10)">
                                        <TextBox.Tag>e.g., 3</TextBox.Tag>
                                    </TextBox>
                                    <TextBlock Text="Number of parallel requests to make (1-10). Higher values speed up crawling but use more resources."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Request Timeout -->
                                <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,16">
                                    <TextBlock Text="Request Timeout" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"
                                               AutomationProperties.AutomationId="RequestTimeoutLabel"/>
                                    <TextBox Text="{Binding TimeoutSeconds, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="7"
                                             AutomationProperties.Name="Request Timeout in Seconds"
                                             ToolTip="Maximum time in seconds to wait for a page response">
                                        <TextBox.Tag>e.g., 30</TextBox.Tag>
                                    </TextBox>
                                    <TextBlock Text="Maximum time in seconds to wait for a page response (5-120 seconds recommended)."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Checkboxes -->
                                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,4,0,0">
                                    <Border Background="{StaticResource SurfaceBrush}"
                                            BorderBrush="{StaticResource BorderLightBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="12"
                                            Margin="0,0,0,10">
                                        <StackPanel>
                                        <CheckBox Content="Follow robots.txt exclusion rules"
                                                  IsChecked="{Binding RespectRobotsTxt}"
                                                  FontSize="14"
                                                  Margin="0"
                                                  TabIndex="8"
                                                  AutomationProperties.Name="Respect Robots.txt"
                                                  AutomationProperties.HelpText="Recommended for ethical crawling. Respects website owner's crawling preferences."
                                                  ToolTip="Recommended for ethical crawling"/>
                                            <TextBlock Text="Recommended for ethical crawling. Respects website owner's crawling preferences."
                                                       Style="{StaticResource HelperText}"
                                                       Margin="32,6,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="{StaticResource SurfaceBrush}"
                                            BorderBrush="{StaticResource BorderLightBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="12">
                                        <StackPanel>
                                        <CheckBox Content="Discover URLs from sitemap.xml"
                                                  IsChecked="{Binding UseSitemapXml}"
                                                  FontSize="14"
                                                  Margin="0"
                                                  TabIndex="9"
                                                  AutomationProperties.Name="Use Sitemap XML"
                                                  AutomationProperties.HelpText="Automatically checks robots.txt and common locations for sitemap.xml to discover URLs."
                                                  ToolTip="Automatically discover URLs from sitemap"/>
                                            <TextBlock Text="Automatically checks robots.txt and common locations for sitemap.xml to discover URLs."
                                                       Style="{StaticResource HelperText}"
                                                       Margin="32,6,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <Border Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource BorderLightBrush}"
                            BorderThickness="0,1,0,0"
                            Padding="0,20,0,0"
                            Margin="0,32,0,0">
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right"
                                    KeyboardNavigation.TabNavigation="Local">
                            <Button Content="Save Settings"
                                    Command="{Binding SaveSettingsCommand}"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,0,12,0"
                                    TabIndex="10"
                                    Visibility="{Binding CurrentProject, Converter={StaticResource NullToVisibilityConverter}}"
                                    AutomationProperties.Name="Save Project Settings"
                                    AutomationProperties.HelpText="Saves the current project settings to disk without starting crawl"
                                    ToolTip="Save changes to project settings"/>
                            <Button Command="{Binding StartCrawlCommand}"
                                    Style="{StaticResource PrimaryButton}"
                                    Height="52"
                                    Padding="28,12"
                                    TabIndex="11"
                                    IsDefault="True"
                                    AutomationProperties.Name="Start Crawl"
                                    AutomationProperties.HelpText="Begins the web crawl with the configured settings"
                                    ToolTip="Begin crawling with current settings (F6)">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{StaticResource Icon.Play}"
                                               Style="{StaticResource Icon}"
                                               Width="20" 
                                               Height="20"
                                               FontSize="20"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Start Crawl" 
                                               VerticalAlignment="Center"
                                               FontSize="15"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        
                        <!-- Custom Extraction Tab -->
                        <TabItem>
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{StaticResource Icon.Code}"
                                               Style="{StaticResource Icon}"
                                               FontSize="16"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Custom Extraction" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </TabItem.Header>
                            
                            <Grid Margin="{StaticResource SpacingL}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="32"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Rules List -->
                                <Border Grid.Column="0" Style="{StaticResource Card}" VerticalAlignment="Stretch">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- List Header -->
                                        <TextBlock Grid.Row="0"
                                                   Text="Extraction Rules"
                                                   Style="{StaticResource SubtitleTextStyle}"
                                                   Margin="0,0,0,12"/>

                                        <!-- Rules DataGrid -->
                                        <DataGrid Grid.Row="1"
                                                  ItemsSource="{Binding ExtractionRules}"
                                                  SelectedItem="{Binding SelectedExtractionRule}"
                                                  Style="{StaticResource ModernDataGrid}"
                                                  AutoGenerateColumns="False"
                                                  IsReadOnly="False"
                                                  SelectionMode="Single"
                                                  HeadersVisibility="Column"
                                                  GridLinesVisibility="None"
                                                  CanUserResizeRows="False"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Margin="0,0,0,16"
                                                  TabIndex="20"
                                                  AutomationProperties.Name="Custom Extraction Rules List"
                                                  AutomationProperties.HelpText="List of custom extraction rules. Select a rule to edit it."
                                                  AutomationProperties.LiveSetting="Polite"
                                                  CellEditEnding="DataGrid_CellEditEnding">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Name" 
                                                                    Binding="{Binding Name}" 
                                                                    Width="*"
                                                                    IsReadOnly="True"/>
                                                <DataGridTextColumn Header="Type" 
                                                                    Binding="{Binding SelectorType, Converter={StaticResource SelectorTypeConverter}}" 
                                                                    Width="Auto"
                                                                    IsReadOnly="True"/>
                                                <DataGridCheckBoxColumn Header="Enabled"
                                                                        Binding="{Binding IsEnabled, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                                                        Width="Auto"
                                                                        IsReadOnly="False"/>
                                            </DataGrid.Columns>
                                        </DataGrid>

                                        <!-- List Actions -->
                                        <StackPanel Grid.Row="2"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Right"
                                                    Margin="0">
                                            <Button Command="{Binding AddExtractionRuleCommand}"
                                                    Style="{StaticResource PrimaryButton}"
                                                    TabIndex="21"
                                                    AutomationProperties.Name="Add New Rule"
                                                    AutomationProperties.HelpText="Creates a new custom extraction rule"
                                                    ToolTip="Create a new extraction rule">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="+" 
                                                               FontWeight="Bold" 
                                                               Margin="0,0,6,0"/>
                                                    <TextBlock Text="Add"/>
                                                </StackPanel>
                                            </Button>
                                            <Button Command="{Binding EditExtractionRuleCommand}"
                                                    Style="{StaticResource SecondaryButton}"
                                                    Margin="8,0,0,0"
                                                    TabIndex="22"
                                                    AutomationProperties.Name="Edit Selected Rule"
                                                    AutomationProperties.HelpText="Edits the currently selected extraction rule"
                                                    ToolTip="Edit the selected rule">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{StaticResource Icon.Edit}"
                                                               Style="{StaticResource Icon}"
                                                               Width="16"
                                                               Height="16"
                                                               Margin="0,0,6,0"/>
                                                    <TextBlock Text="Edit"/>
                                                </StackPanel>
                                            </Button>
                                            <Button Command="{Binding DeleteExtractionRuleCommand}"
                                                    Style="{StaticResource DangerButton}"
                                                    Margin="8,0,0,0"
                                                    TabIndex="23"
                                                    AutomationProperties.Name="Delete Selected Rule"
                                                    AutomationProperties.HelpText="Deletes the currently selected extraction rule permanently"
                                                    ToolTip="Delete the selected rule">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{StaticResource Icon.Delete}"
                                                               Style="{StaticResource Icon}"
                                                               Width="16"
                                                               Height="16"
                                                               Margin="0,0,6,0"/>
                                                    <TextBlock Text="Delete"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Rule Editor -->
                                <Border Grid.Column="2"
                                        Style="{StaticResource Card}"
                                        VerticalAlignment="Stretch"
                                        Visibility="{Binding IsEditingExtractionRule, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Editor Header -->
                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding EditingExtractionRuleId, Converter={StaticResource RuleEditorTitleConverter}}"
                                                   Style="{StaticResource SubtitleTextStyle}"
                                                   Margin="0,0,0,16"/>

                                        <!-- Editor Form -->
                                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,24" Padding="0,0,8,0">
                                            <StackPanel>
                                                <!-- Name -->
                                                <StackPanel Margin="0,0,0,16">
                                                    <TextBlock Text="Rule Name" 
                                                               Style="{StaticResource FormFieldLabel}"
                                                               Margin="0,0,0,8"/>
                                                    <TextBox Text="{Binding EditingExtractionName, UpdateSourceTrigger=PropertyChanged}"
                                                             Style="{StaticResource ModernTextBox}"
                                                             TabIndex="24"
                                                             AutomationProperties.Name="Rule Name"
                                                             AutomationProperties.HelpText="Descriptive name for this extraction rule">
                                                        <TextBox.Tag>e.g., Product Title</TextBox.Tag>
                                                    </TextBox>
                                                </StackPanel>

                                                <!-- Selector Type -->
                                                <StackPanel Margin="0,0,0,16">
                                                    <TextBlock Text="Selector Type" 
                                                               Style="{StaticResource FormFieldLabel}"
                                                               Margin="0,0,0,8"/>
                                                    <ComboBox SelectedIndex="{Binding EditingExtractionSelectorType}"
                                                              Style="{StaticResource ModernComboBox}"
                                                              TabIndex="26"
                                                              AutomationProperties.Name="Selector Type"
                                                              AutomationProperties.HelpText="Choose between CSS selector, XPath, or Regular Expression">
                                                        <ComboBoxItem Content="CSS Selector"/>
                                                        <ComboBoxItem Content="XPath"/>
                                                        <ComboBoxItem Content="Regex"/>
                                                    </ComboBox>
                                                </StackPanel>

                                                <!-- Selector/Pattern -->
                                                <StackPanel Margin="0,0,0,16">
                                                    <TextBlock Text="Selector / Pattern" 
                                                               Style="{StaticResource FormFieldLabel}"
                                                               Margin="0,0,0,8"/>
                                                    <TextBox Text="{Binding EditingExtractionSelector, UpdateSourceTrigger=PropertyChanged}"
                                                             Style="{StaticResource ModernTextBox}"
                                                             AcceptsReturn="True"
                                                             TextWrapping="Wrap"
                                                             MinHeight="80"
                                                             VerticalScrollBarVisibility="Auto"
                                                             TabIndex="27"
                                                             AutomationProperties.Name="Selector or Pattern"
                                                             AutomationProperties.HelpText="CSS selector, XPath expression, or regular expression pattern">
                                                        <TextBox.Tag>CSS: h1.title | XPath: //h1[@class='title'] | Regex: &lt;h1&gt;(.+?)&lt;/h1&gt;</TextBox.Tag>
                                                        <TextBox.ToolTip>
                                                            <ToolTip MaxWidth="400">
                                                                <StackPanel>
                                                                    <TextBlock FontWeight="SemiBold" Margin="0,0,0,8">CSS Selector Examples (Full CSS3 Support):</TextBlock>
                                                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,4">• Basic: div, .class-name, #id-name</TextBlock>
                                                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,4">• Child combinator: div > p.highlight</TextBlock>
                                                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,4">• Attribute: a[href*="example"], input[type="text"]</TextBlock>
                                                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,4">• Pseudo-classes: a:nth-child(2), p:first-of-type</TextBlock>
                                                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,4">• Adjacent sibling: h1 + p</TextBlock>
                                                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">• Complex: div.container > article:not(.draft) h2</TextBlock>
                                                                    <TextBlock FontWeight="SemiBold" Margin="0,8,0,4">XPath Examples:</TextBlock>
                                                                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">//div[@class='price']//span[@class='amount']</TextBlock>
                                                                    <TextBlock FontWeight="SemiBold" Margin="0,8,0,4">Regex Examples:</TextBlock>
                                                                    <TextBlock TextWrapping="Wrap">&lt;meta name="price" content="([^"]+)"/></TextBlock>
                                                                </StackPanel>
                                                            </ToolTip>
                                                        </TextBox.ToolTip>
                                                    </TextBox>
                                                </StackPanel>

                                                <!-- Enabled -->
                                                <CheckBox IsChecked="{Binding EditingExtractionIsEnabled}"
                                                          Content="Enabled"
                                                          FontSize="14"
                                                          Margin="0,0,0,8"
                                                          TabIndex="28"
                                                          AutomationProperties.Name="Rule Enabled"
                                                          AutomationProperties.HelpText="Enable or disable this extraction rule"/>
                                            </StackPanel>
                                        </ScrollViewer>

                                        <!-- Editor Actions -->
                                        <StackPanel Grid.Row="2"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Right"
                                                    Margin="0">
                                            <Button Content="Cancel"
                                                    Command="{Binding CancelEditExtractionRuleCommand}"
                                                    Style="{StaticResource SecondaryButton}"
                                                    Margin="0,0,8,0"
                                                    TabIndex="29"
                                                    AutomationProperties.Name="Cancel Edit"
                                                    AutomationProperties.HelpText="Cancels editing and discards changes"
                                                    ToolTip="Cancel changes (Esc)"/>
                                            <Button Content="Save"
                                                    Command="{Binding SaveExtractionRuleCommand}"
                                                    Style="{StaticResource PrimaryButton}"
                                                    TabIndex="30"
                                                    AutomationProperties.Name="Save Rule"
                                                    AutomationProperties.HelpText="Saves the extraction rule"
                                                    ToolTip="Save extraction rule (Enter)"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Placeholder when not editing -->
                                <Border Grid.Column="2"
                                        Style="{StaticResource Card}"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding IsEditingExtractionRule, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="Select a rule to edit or click Add to create a new rule"
                                                   Style="{StaticResource BodyTextStyle}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </TabItem>
                        
                    </TabControl>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
