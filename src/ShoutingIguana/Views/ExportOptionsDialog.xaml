<Window x:Class="ShoutingIguana.Views.ExportOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Options"
        Height="250"
        Width="450"
        MinHeight="250"
        MinWidth="450"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource TextPrimaryBrush}"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        ResizeMode="NoResize">
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Export Options"
                       Style="{StaticResource TitleTextStyle}"
                       FontSize="20"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Configure how findings should be exported"
                       Style="{StaticResource BodyTextStyle}"
                       Foreground="{StaticResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- Options -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="8"
                Padding="20">
            <StackPanel>
                <CheckBox IsChecked="{Binding IncludeTechnicalMetadata}"
                          FontSize="14"
                          Margin="0">
                    <StackPanel>
                        <TextBlock Text="Include Technical Metadata" 
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="Adds an additional column with raw technical data (JSON format) for advanced analysis"
                                   Style="{StaticResource HelperText}"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </CheckBox>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource SecondaryButton}"
                    Width="100"
                    Margin="0,0,12,0"
                    IsCancel="True"/>
            <Button Command="{Binding OkCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Width="100"
                    IsDefault="True">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{StaticResource Icon.Save}"
                               Style="{StaticResource Icon}"
                               Width="16"
                               Height="16"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="Export" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>

