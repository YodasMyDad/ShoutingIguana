<UserControl x:Class="ShoutingIguana.Views.ExtensionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">
    
    
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  KeyboardNavigation.TabNavigation="Local"
                  Focusable="False">
        <Grid Margin="{StaticResource SpacingL}" KeyboardNavigation.TabNavigation="Local">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="400"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="24"
                    Margin="0,0,0,24"
                    SnapsToDevicePixels="True">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.06"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource PrimaryBrush}"
                            Width="44" Height="44"
                            CornerRadius="8"
                            Margin="0,0,16,0">
                        <TextBlock Text="{StaticResource Icon.Puzzle}"
                                   Style="{StaticResource Icon}"
                                   FontSize="22"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Extensions" 
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="24"
                                   Margin="0"
                                   AutomationProperties.HeadingLevel="Level1"
                                   AutomationProperties.LiveSetting="Off"
                                   AutomationProperties.AutomationId="ExtensionsPageHeading"/>
                        <TextBlock Text="Manage analysis plugins and tasks"
                                   Style="{StaticResource BodyTextStyle}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Summary Metrics -->
            <Grid Grid.Row="1" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Loaded Plugins Card -->
                <Border Grid.Column="0" 
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        BorderThickness="0,0,0,4"
                        SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{StaticResource PrimaryBrush}"
                                    Width="32" Height="32"
                                    CornerRadius="6"
                                    Margin="0,0,10,0">
                                <TextBlock Text="{StaticResource Icon.Puzzle}"
                                           Style="{StaticResource Icon}"
                                           FontSize="16"
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="Loaded Plugins"
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding TotalPlugins}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                    </Grid>
                </Border>

                <!-- Registered Tasks Card -->
                <Border Grid.Column="2" 
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        BorderBrush="{StaticResource SuccessBrush}"
                        BorderThickness="0,0,0,4"
                        SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{StaticResource SuccessBrush}"
                                    Width="32" Height="32"
                                    CornerRadius="6"
                                    Margin="0,0,10,0">
                                <TextBlock Text="{StaticResource Icon.CheckList}"
                                           Style="{StaticResource Icon}"
                                           FontSize="16"
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="Registered Tasks"
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding TotalTasks}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SuccessBrush}"/>
                    </Grid>
                </Border>
                
                <!-- Stage 2 Info Card -->
                <Border Grid.Column="4"
                        Background="#E3F2FD"
                        CornerRadius="8"
                        Padding="20"
                        SnapsToDevicePixels="True">
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="{StaticResource Icon.Info}"
                                       Style="{StaticResource Icon}"
                                       FontSize="16"
                                       Foreground="{StaticResource InfoBrush}"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Stage 2"
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource InfoBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Hot-loading available in Stage 3"
                                   Style="{StaticResource CaptionTextStyle}"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Plugins List -->
            <Border Grid.Row="2" 
                    Style="{StaticResource Card}"
                    Padding="{StaticResource SpacingXs}"
                    SnapsToDevicePixels="True">
                <Grid>
                    <DataGrid ItemsSource="{Binding Plugins}"
                              Style="{StaticResource ModernDataGrid}"
                              AutomationProperties.Name="Plugins List"
                              AutomationProperties.HelpText="List of installed plugins with their status and information"
                              KeyboardNavigation.TabNavigation="Local">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Copy Plugin ID" 
                                          Command="{Binding CopyPluginIdCommand}"
                                          AutomationProperties.Name="Copy Plugin ID to Clipboard">
                                    <MenuItem.Icon>
                                        <TextBlock Text="{StaticResource Icon.Copy}" Style="{StaticResource Icon}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Copy Details" 
                                          Command="{Binding CopyPluginDetailsCommand}"
                                          AutomationProperties.Name="Copy Plugin Details to Clipboard">
                                    <MenuItem.Icon>
                                        <TextBlock Text="{StaticResource Icon.Copy}" Style="{StaticResource Icon}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Refresh" 
                                          Command="{Binding RefreshPluginsCommand}"
                                          AutomationProperties.Name="Refresh Plugins List">
                                    <MenuItem.Icon>
                                        <TextBlock Text="{StaticResource Icon.Refresh}" Style="{StaticResource Icon}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" 
                                                Binding="{Binding Name}" 
                                                Width="220"
                                                FontWeight="SemiBold"
                                                FontSize="14"/>
                            <DataGridTextColumn Header="Version" 
                                                Binding="{Binding Version}" 
                                                Width="100"
                                                FontFamily="Consolas"/>
                            <DataGridTextColumn Header="Description" 
                                                Binding="{Binding Description}" 
                                                Width="*"
                                                MinWidth="250"/>
                            <DataGridTemplateColumn Header="Status" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#E8F5E9"
                                                CornerRadius="12"
                                                Padding="10,4"
                                                HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Status}"
                                                       Foreground="{StaticResource SuccessBrush}"
                                                       FontWeight="SemiBold"
                                                       FontSize="12"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Tasks" 
                                                Binding="{Binding TaskCount}" 
                                                Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Plugin ID" 
                                                Binding="{Binding Id}" 
                                                Width="280"
                                                FontFamily="Consolas"
                                                FontSize="11">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Empty State -->
                    <Border Style="{StaticResource InfoCard}"
                            Padding="48"
                            Visibility="Collapsed"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            MaxWidth="500">
                        <StackPanel HorizontalAlignment="Center">
                            <Border Background="{StaticResource InfoBrush}"
                                    Width="80" Height="80"
                                    CornerRadius="40"
                                    Margin="0,0,0,24"
                                    HorizontalAlignment="Center">
                                <TextBlock Text="{StaticResource Icon.Puzzle}"
                                           Style="{StaticResource Icon}"
                                           FontSize="40"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="No Plugins Loaded"
                                       Style="{StaticResource TitleTextStyle}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,12"/>
                            <TextBlock Text="Plugins will automatically load when the application starts. If you don't see any plugins, check the application logs for errors."
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       MaxWidth="400"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
