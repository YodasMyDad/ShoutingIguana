<Window x:Class="ShoutingIguana.Views.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Shouting Iguana"
        Height="600"
        Width="500"
        MinHeight="600"
        MinWidth="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource TextPrimaryBrush}"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display">

    <Grid KeyboardNavigation.TabNavigation="Cycle">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="0,0,0,1"
                Padding="{StaticResource SpacingL}">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="64" Height="64"
                            Background="White"
                            CornerRadius="12"
                            Margin="0,0,16,0">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                        </Border.Effect>
                        <Image Source="/Assets/logo.png"
                               Width="48"
                               Height="48"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Shouting Iguana"
                                   Style="{StaticResource TitleTextStyle}"
                                   Margin="0"
                                   AutomationProperties.HeadingLevel="Level1"/>
                        <TextBlock Text="Version 0.1.0"
                                   Style="{StaticResource BodyTextStyle}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Padding="{StaticResource SpacingL}">
            <StackPanel>
                <!-- Description -->
                <TextBlock Text="A professional web crawler and SEO analysis tool for Windows"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Style="{StaticResource BodyTextStyle}"
                           Margin="0,0,0,24"/>

                <!-- Info Section -->
                <Border Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Copyright &#xA9; 2025"
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Licensed under MIT License"
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="0,0,0,16"/>

                        <TextBlock Text="Build Date"
                                   Style="{StaticResource CaptionTextStyle}"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="{Binding BuildDate}"
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="0,0,0,16"/>

                        <TextBlock Text="Runtime"
                                   Style="{StaticResource CaptionTextStyle}"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text=".NET 9.0"
                                   Style="{StaticResource BodyTextStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Libraries Section -->
                <Border Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Built With"
                                   Style="{StaticResource SubtitleTextStyle}"
                                   Margin="0,0,0,12"/>

                        <TextBlock Style="{StaticResource CaptionTextStyle}">
                            <Run Text="&#x2022; Microsoft Playwright"/>
                            <LineBreak/>
                            <Run Text="&#x2022; Entity Framework Core"/>
                            <LineBreak/>
                            <Run Text="&#x2022; HtmlAgilityPack"/>
                            <LineBreak/>
                            <Run Text="&#x2022; ClosedXML"/>
                            <LineBreak/>
                            <Run Text="&#x2022; CsvHelper"/>
                            <LineBreak/>
                            <Run Text="&#x2022; NuGet.Protocol"/>
                            <LineBreak/>
                            <Run Text="&#x2022; Serilog"/>
                            <LineBreak/>
                            <Run Text="&#x2022; CommunityToolkit.Mvvm"/>
                        </TextBlock>

                        <TextBlock Text="Developed by Lee Messenger"
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="0,16,0,0"
                                   FontWeight="Medium"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="0,1,0,0"
                Padding="{StaticResource SpacingM}">
            <Button Content="Close"
                    Command="{Binding CloseCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Height="48"
                    HorizontalAlignment="Center"
                    MinWidth="120"
                    TabIndex="0"
                    IsDefault="True"
                    AutomationProperties.Name="Close About Dialog"
                    AutomationProperties.HelpText="Closes the About dialog and returns to the application"/>
        </Border>
    </Grid>
</Window>
