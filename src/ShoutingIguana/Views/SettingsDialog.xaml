<Window x:Class="ShoutingIguana.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="700"
        Width="900"
        MinHeight="600"
        MinWidth="800"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource TextPrimaryBrush}"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        ResizeMode="CanResize">
    
    <Grid Margin="0" KeyboardNavigation.TabNavigation="Cycle">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="0,0,0,1"
                Padding="32,24">
            <StackPanel Orientation="Horizontal">
                <Border Background="{StaticResource PrimaryBrush}"
                        Width="44" Height="44"
                        CornerRadius="8"
                        Margin="0,0,16,0">
                    <TextBlock Text="{StaticResource Icon.Settings}"
                               Style="{StaticResource Icon}"
                               FontSize="22"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Settings"
                               Style="{StaticResource TitleTextStyle}"
                               Margin="0"/>
                    <TextBlock Text="Configure application behavior and preferences"
                               Style="{StaticResource BodyTextStyle}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Tabbed Settings -->
        <TabControl Grid.Row="1" 
                    Style="{StaticResource StandardTabControl}"
                    Background="{StaticResource BackgroundBrush}"
                    KeyboardNavigation.TabNavigation="Local"
                    Margin="24,0">
            
            <!-- Crawling Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{StaticResource Icon.Web}"
                                   Style="{StaticResource Icon}"
                                   Width="16" 
                                   Height="16"
                                   FontSize="16"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Crawling" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32,24">
                    <StackPanel MaxWidth="750">
                        
                        <!-- Performance Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,24">
                            <StackPanel>
                                <TextBlock Text="Performance Settings" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <!-- Concurrent Requests -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Concurrent Requests" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"
                                               AutomationProperties.AutomationId="ConcurrentRequestsLabel"/>
                                    <TextBox Text="{Binding ConcurrentRequests, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="0"
                                             AutomationProperties.LabeledBy="{Binding RelativeSource={RelativeSource Self}, Path=Parent.Children[0]}"
                                             AutomationProperties.Name="Concurrent Requests"
                                             ToolTip="Number of parallel requests (1-10)"/>
                                    <TextBlock Text="Number of parallel requests to make (1-10). Higher values speed up crawling but use more resources."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Timeout -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Request Timeout" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding TimeoutSeconds, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="1"
                                             AutomationProperties.Name="Request Timeout in Seconds"
                                             ToolTip="Maximum time in seconds to wait for a response"/>
                                    <TextBlock Text="Maximum time in seconds to wait for a page response (5-120 seconds recommended)."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Crawl Delay -->
                                <StackPanel Margin="0,0,0,0">
                                    <TextBlock Text="Crawl Delay" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding CrawlDelaySeconds, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="2"
                                             AutomationProperties.Name="Crawl Delay in Seconds"
                                             ToolTip="Delay between requests in seconds"/>
                                    <TextBlock Text="Delay between requests in seconds. Use to be polite to target servers (0-10 seconds)."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Crawl Limits Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,24">
                            <StackPanel>
                                <TextBlock Text="Crawl Limits" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <!-- Max Crawl Depth -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Maximum Crawl Depth" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding MaxCrawlDepth, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="3"
                                             AutomationProperties.Name="Maximum Crawl Depth"
                                             ToolTip="Maximum number of clicks from the start URL"/>
                                    <TextBlock Text="Maximum number of clicks from the start URL (1-20). Depth 1 = only pages directly linked from start URL."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Max URLs -->
                                <StackPanel Margin="0,0,0,0">
                                    <TextBlock Text="Maximum URLs to Crawl" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding MaxUrlsToCrawl, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="4"
                                             AutomationProperties.Name="Maximum URLs to Crawl"
                                             ToolTip="Maximum total URLs to crawl (0 = unlimited)"/>
                                    <TextBlock Text="Maximum total number of URLs to crawl. Set to 0 for unlimited (not recommended for large sites)."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Crawl Options Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Crawl Options" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <Border Background="{StaticResource BackgroundBrush}"
                                        BorderBrush="{StaticResource BorderLightBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12"
                                        Margin="0,0,0,10">
                                    <StackPanel>
                                        <CheckBox IsChecked="{Binding RespectRobotsTxt}"
                                                  FontSize="14"
                                                  Margin="0"
                                                  TabIndex="5"
                                                  AutomationProperties.Name="Respect Robots.txt">
                                            <TextBlock Text="Follow robots.txt exclusion rules" TextWrapping="Wrap"/>
                                        </CheckBox>
                                        <TextBlock Text="Recommended for ethical crawling. Respects website owner's crawling preferences."
                                                   Style="{StaticResource HelperText}"
                                                   Margin="32,6,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="{StaticResource BackgroundBrush}"
                                        BorderBrush="{StaticResource BorderLightBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12">
                                    <StackPanel>
                                        <CheckBox IsChecked="{Binding UseSitemapXml}"
                                                  FontSize="14"
                                                  Margin="0"
                                                  TabIndex="6"
                                                  AutomationProperties.Name="Use Sitemap XML">
                                            <TextBlock Text="Discover URLs from sitemap.xml" TextWrapping="Wrap"/>
                                        </CheckBox>
                                        <TextBlock Text="Automatically checks robots.txt and common locations for sitemap.xml to discover URLs."
                                                   Style="{StaticResource HelperText}"
                                                   Margin="32,6,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Browser Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{StaticResource Icon.Globe}"
                                   Style="{StaticResource Icon}"
                                   Width="16" 
                                   Height="16"
                                   FontSize="16"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Browser" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32,32,32,16">
                    <StackPanel MaxWidth="700">
                        
                        <!-- Browser Mode Section -->
                        <TextBlock Text="Browser Mode" 
                                   Style="{StaticResource FormSectionHeader}"
                                   Margin="0,0,0,16"
                                   AutomationProperties.HeadingLevel="Level2"/>

                        <CheckBox IsChecked="{Binding Headless}"
                                  FontSize="14"
                                  Margin="0,0,0,8"
                                  TabIndex="0"
                                  AutomationProperties.Name="Headless Mode">
                            <TextBlock Text="Run browser in headless mode" TextWrapping="Wrap" FontWeight="SemiBold"/>
                        </CheckBox>
                        <TextBlock Text="Recommended for better performance. Browser runs in background without GUI, using less memory and CPU."
                                   Style="{StaticResource HelperText}"
                                   Margin="32,0,0,20"/>

                        <!-- Viewport Settings Section -->
                        <TextBlock Text="Viewport Settings" 
                                   Style="{StaticResource FormSectionHeader}"
                                   AutomationProperties.HeadingLevel="Level2"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Viewport Width -->
                            <StackPanel Grid.Column="0" Style="{StaticResource InputContainer}">
                                <TextBlock Text="Viewport Width" 
                                           Style="{StaticResource FormFieldLabel}"/>
                                <TextBox Text="{Binding ViewportWidth, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         TabIndex="1"
                                         AutomationProperties.Name="Viewport Width in Pixels"/>
                                <TextBlock Text="Browser viewport width in pixels."
                                           Style="{StaticResource HelperText}"/>
                            </StackPanel>

                            <!-- Viewport Height -->
                            <StackPanel Grid.Column="2" Style="{StaticResource InputContainer}">
                                <TextBlock Text="Viewport Height" 
                                           Style="{StaticResource FormFieldLabel}"/>
                                <TextBox Text="{Binding ViewportHeight, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         TabIndex="2"
                                         AutomationProperties.Name="Viewport Height in Pixels"/>
                                <TextBlock Text="Browser viewport height in pixels."
                                           Style="{StaticResource HelperText}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Resource Management Section -->
                        <TextBlock Text="Resource Management" 
                                   Style="{StaticResource FormSectionHeader}"
                                   AutomationProperties.HeadingLevel="Level2"/>

                        <!-- Memory Limit -->
                        <StackPanel Style="{StaticResource InputContainer}">
                            <TextBlock Text="Memory Limit" 
                                       Style="{StaticResource FormFieldLabel}"/>
                            <TextBox Text="{Binding MemoryLimitMb, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBox}"
                                     TabIndex="3"
                                     AutomationProperties.Name="Memory Limit in Megabytes"/>
                            <TextBlock Text="Browser will automatically restart if memory usage exceeds this limit (in MB). Helps prevent crashes on long crawls."
                                       Style="{StaticResource HelperText}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Plugins Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{StaticResource Icon.Puzzle}"
                                   Style="{StaticResource Icon}"
                                   Width="16" 
                                   Height="16"
                                   FontSize="16"
                                   Margin="0,0,8,0"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Plugins" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="32,32,32,16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Installed Plugins" 
                               Style="{StaticResource FormSectionHeader}"
                               Margin="0,0,0,16"
                               AutomationProperties.HeadingLevel="Level2"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Plugins}"
                              Style="{StaticResource ModernDataGrid}"
                              MaxHeight="400"
                              Margin="0,0,0,16">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" 
                                                Binding="{Binding Name}" 
                                                Width="*"
                                                MinWidth="150"
                                                FontWeight="SemiBold"/>
                            <DataGridTextColumn Header="Version" 
                                                Binding="{Binding Version}" 
                                                Width="100"
                                                FontFamily="Consolas"/>
                            <DataGridCheckBoxColumn Header="Enabled" 
                                                    Binding="{Binding IsEnabled}" 
                                                    Width="80"
                                                    IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="2" 
                            Padding="16" 
                            Background="#E3F2FD"
                            CornerRadius="6">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="{StaticResource Icon.Info}"
                                           Style="{StaticResource Icon}"
                                           Width="20"
                                           Height="20"
                                           FontSize="20"
                                           Foreground="{StaticResource InfoBrush}"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="Stage 2 Limitation" 
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Foreground="{StaticResource InfoBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="In Stage 2, all plugins are always enabled. Plugin enable/disable and hot-loading will be available in Stage 3."
                                       TextWrapping="Wrap"
                                       FontSize="13"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="28,0,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Action Buttons -->
        <Border Grid.Row="2"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="0,1,0,0"
                Padding="32,20">
            <Grid>
                <Button Command="{Binding RestoreDefaultsCommand}"
                        Style="{StaticResource SecondaryButton}"
                        HorizontalAlignment="Left"
                        TabIndex="100"
                        AutomationProperties.Name="Restore Default Settings"
                        AutomationProperties.HelpText="Resets all settings to their default values"
                        ToolTip="Reset all settings to default values">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{StaticResource Icon.Refresh}"
                                   Style="{StaticResource Icon}"
                                   Width="14"
                                   Height="14"
                                   FontSize="14"
                                   Margin="0,0,6,0"/>
                        <TextBlock Text="Restore Defaults" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,12,0"
                            TabIndex="101"
                            AutomationProperties.Name="Cancel"
                            AutomationProperties.HelpText="Closes the settings dialog without saving changes"
                            ToolTip="Close without saving changes (Esc)"
                            IsCancel="True"/>
                    <Button Command="{Binding SaveCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Height="48"
                            Padding="32,12"
                            TabIndex="102"
                            AutomationProperties.Name="Save Settings"
                            AutomationProperties.HelpText="Saves all settings changes and closes the dialog"
                            ToolTip="Save changes and close (Enter)"
                            IsDefault="True">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{StaticResource Icon.Save}"
                                       Style="{StaticResource Icon}"
                                       Width="16"
                                       Height="16"
                                       FontSize="16"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Save Settings" 
                                       VerticalAlignment="Center"
                                       FontSize="15"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
