<Window x:Class="ShoutingIguana.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Settings"
        Height="650"
        Width="850"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        ResizeMode="CanResize">
    
    <Grid Margin="{StaticResource SpacingL}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Application Settings"
                   Style="{StaticResource DisplayTextStyle}"
                   Margin="{StaticResource SpacingL}"
                   AutomationProperties.HeadingLevel="Level1"/>

        <!-- Tabbed Settings -->
        <TabControl Grid.Row="1" 
                    Style="{StaticResource MaterialDesignFilledTabControl}"
                    Background="{StaticResource SurfaceBrush}">
            
            <!-- Crawling Tab -->
            <TabItem Header="Crawling">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="{StaticResource SpacingL}">
                    <StackPanel MaxWidth="700">
                        <TextBlock Text="Crawl Behavior" 
                                   Style="{StaticResource TitleTextStyle}"
                                   Margin="0,0,0,8"
                                   AutomationProperties.HeadingLevel="Level2"/>
                        
                        <TextBlock Text="Configure how the crawler behaves during web scraping operations."
                                   Style="{StaticResource BodyTextStyle}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="{StaticResource SpacingL}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Concurrent Requests -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Concurrent Requests" 
                                       VerticalAlignment="Center" 
                                       Style="{StaticResource BodyTextStyle}"
                                       Margin="0,0,16,20"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,20">
                                <TextBox Text="{Binding ConcurrentRequests, UpdateSourceTrigger=PropertyChanged}"
                                         md:HintAssist.Hint="1-10"
                                         Style="{StaticResource StandardTextBox}"
                                         AutomationProperties.Name="Concurrent Requests"/>
                                <TextBlock Text="Number of parallel requests (1-10)"
                                           Style="{StaticResource CaptionTextStyle}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Timeout -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Timeout" 
                                       VerticalAlignment="Center" 
                                       Style="{StaticResource BodyTextStyle}"
                                       Margin="0,0,16,20"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,20">
                                <TextBox Text="{Binding TimeoutSeconds, UpdateSourceTrigger=PropertyChanged}"
                                         md:HintAssist.Hint="Seconds (5-300)"
                                         Style="{StaticResource StandardTextBox}"
                                         AutomationProperties.Name="Request Timeout"/>
                                <TextBlock Text="Request timeout in seconds"
                                           Style="{StaticResource CaptionTextStyle}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Max Crawl Depth -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Max Crawl Depth" 
                                       VerticalAlignment="Center" 
                                       Style="{StaticResource BodyTextStyle}"
                                       Margin="0,0,16,20"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,20">
                                <TextBox Text="{Binding MaxCrawlDepth, UpdateSourceTrigger=PropertyChanged}"
                                         md:HintAssist.Hint="1-20"
                                         Style="{StaticResource StandardTextBox}"
                                         AutomationProperties.Name="Maximum Crawl Depth"/>
                                <TextBlock Text="Maximum link depth from start URL"
                                           Style="{StaticResource CaptionTextStyle}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Max URLs to Crawl -->
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="Max URLs to Crawl" 
                                       VerticalAlignment="Center" 
                                       Style="{StaticResource BodyTextStyle}"
                                       Margin="0,0,16,20"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,20">
                                <TextBox Text="{Binding MaxUrlsToCrawl, UpdateSourceTrigger=PropertyChanged}"
                                         md:HintAssist.Hint="0 = unlimited"
                                         Style="{StaticResource StandardTextBox}"
                                         AutomationProperties.Name="Maximum URLs"/>
                                <TextBlock Text="Maximum URLs to crawl (0 for unlimited)"
                                           Style="{StaticResource CaptionTextStyle}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Crawl Delay -->
                            <TextBlock Grid.Row="4" Grid.Column="0" 
                                       Text="Crawl Delay" 
                                       VerticalAlignment="Center" 
                                       Style="{StaticResource BodyTextStyle}"
                                       Margin="0,0,16,20"/>
                            <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,0,0,20">
                                <TextBox Text="{Binding CrawlDelaySeconds, UpdateSourceTrigger=PropertyChanged}"
                                         md:HintAssist.Hint="Seconds (0.0+)"
                                         Style="{StaticResource StandardTextBox}"
                                         AutomationProperties.Name="Crawl Delay"/>
                                <TextBlock Text="Delay between requests (politeness)"
                                           Style="{StaticResource CaptionTextStyle}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Respect Robots.txt -->
                            <TextBlock Grid.Row="5" Grid.Column="0" 
                                       Text="Respect robots.txt" 
                                       VerticalAlignment="Center" 
                                       Style="{StaticResource BodyTextStyle}"
                                       Margin="0,0,16,20"/>
                            <StackPanel Grid.Row="5" Grid.Column="1" Margin="0,0,0,20">
                                <CheckBox IsChecked="{Binding RespectRobotsTxt}"
                                          Content="Follow robots.txt exclusion rules"
                                          FontSize="14"
                                          AutomationProperties.Name="Respect Robots.txt"/>
                            </StackPanel>

                            <!-- User Agent -->
                            <TextBlock Grid.Row="6" Grid.Column="0" 
                                       Text="User Agent" 
                                       VerticalAlignment="Center" 
                                       Style="{StaticResource BodyTextStyle}"
                                       Margin="0,0,16,0"/>
                            <StackPanel Grid.Row="6" Grid.Column="1">
                                <TextBox Text="{Binding UserAgent, UpdateSourceTrigger=PropertyChanged}"
                                         md:HintAssist.Hint="User-Agent string"
                                         Style="{StaticResource StandardTextBox}"
                                         AutomationProperties.Name="User Agent String"/>
                                <TextBlock Text="Custom User-Agent header for requests"
                                           Style="{StaticResource CaptionTextStyle}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Browser Tab -->
            <TabItem Header="Browser">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="{StaticResource SpacingL}">
                    <StackPanel MaxWidth="700">
                        <TextBlock Text="Browser Settings" 
                                   Style="{StaticResource TitleTextStyle}"
                                   Margin="0,0,0,8"
                                   AutomationProperties.HeadingLevel="Level2"/>
                        
                        <TextBlock Text="Configure Playwright browser behavior for JavaScript rendering."
                                   Style="{StaticResource BodyTextStyle}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="{StaticResource SpacingL}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Headless Mode -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Headless Mode" 
                                       VerticalAlignment="Center" 
                                       Style="{StaticResource BodyTextStyle}"
                                       Margin="0,0,16,20"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,20">
                                <CheckBox IsChecked="{Binding Headless}"
                                          Content="Run browser in background (faster, recommended)"
                                          FontSize="14"
                                          AutomationProperties.Name="Headless Mode"/>
                                <TextBlock Text="Disable to see browser window (slower)"
                                           Style="{StaticResource CaptionTextStyle}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Viewport Width -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Viewport Width" 
                                       VerticalAlignment="Center" 
                                       Style="{StaticResource BodyTextStyle}"
                                       Margin="0,0,16,20"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,0,0,20">
                                <TextBox Text="{Binding ViewportWidth, UpdateSourceTrigger=PropertyChanged}"
                                         md:HintAssist.Hint="Pixels (320-3840)"
                                         Style="{StaticResource StandardTextBox}"
                                         AutomationProperties.Name="Viewport Width"/>
                                <TextBlock Text="Browser viewport width in pixels"
                                           Style="{StaticResource CaptionTextStyle}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Viewport Height -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Viewport Height" 
                                       VerticalAlignment="Center" 
                                       Style="{StaticResource BodyTextStyle}"
                                       Margin="0,0,16,20"/>
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,20">
                                <TextBox Text="{Binding ViewportHeight, UpdateSourceTrigger=PropertyChanged}"
                                         md:HintAssist.Hint="Pixels (240-2160)"
                                         Style="{StaticResource StandardTextBox}"
                                         AutomationProperties.Name="Viewport Height"/>
                                <TextBlock Text="Browser viewport height in pixels"
                                           Style="{StaticResource CaptionTextStyle}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>

                            <!-- Memory Limit -->
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="Memory Limit" 
                                       VerticalAlignment="Center" 
                                       Style="{StaticResource BodyTextStyle}"
                                       Margin="0,0,16,0"/>
                            <StackPanel Grid.Row="3" Grid.Column="1">
                                <TextBox Text="{Binding MemoryLimitMb, UpdateSourceTrigger=PropertyChanged}"
                                         md:HintAssist.Hint="MB (512+)"
                                         Style="{StaticResource StandardTextBox}"
                                         AutomationProperties.Name="Memory Limit"/>
                                <TextBlock Text="Browser restarts automatically if memory exceeds this limit"
                                           Style="{StaticResource CaptionTextStyle}"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Plugins Tab -->
            <TabItem Header="Plugins">
                <Grid Margin="{StaticResource SpacingL}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Installed Plugins" 
                               Style="{StaticResource TitleTextStyle}"
                               Margin="0,0,0,8"
                               AutomationProperties.HeadingLevel="Level2"/>
                    
                    <TextBlock Grid.Row="1"
                               Text="Manage analyzer plugins for the crawler."
                               Style="{StaticResource BodyTextStyle}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="{StaticResource SpacingM}"/>

                    <DataGrid Grid.Row="2"
                              ItemsSource="{Binding Plugins}"
                              Style="{StaticResource ModernDataGrid}"
                              MaxHeight="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" 
                                                Binding="{Binding Name}" 
                                                Width="*"
                                                FontWeight="SemiBold"/>
                            <DataGridTextColumn Header="Version" 
                                                Binding="{Binding Version}" 
                                                Width="120"
                                                FontFamily="Consolas"/>
                            <DataGridCheckBoxColumn Header="Enabled" 
                                                    Binding="{Binding IsEnabled}" 
                                                    Width="100"
                                                    IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <md:Card Grid.Row="3" 
                             Padding="16" 
                             Margin="0,16,0,0" 
                             Background="#E3F2FD"
                             md:ElevationAssist.Elevation="Dp0"
                             UniformCornerRadius="6">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <md:PackIcon Kind="InformationOutline"
                                             Width="20"
                                             Height="20"
                                             Foreground="{StaticResource InfoBrush}"
                                             VerticalAlignment="Center"
                                             Margin="0,0,8,0"/>
                                <TextBlock Text="Stage 2 Limitation" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource InfoBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="In Stage 2, all plugins are always enabled. Plugin enable/disable and hot-loading will be available in Stage 3."
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="28,0,0,0"/>
                        </StackPanel>
                    </md:Card>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="{StaticResource SpacingL}">
            <Button Content="Restore Defaults"
                    Command="{Binding RestoreDefaultsCommand}"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,0,12,0"
                    AutomationProperties.Name="Restore Default Settings"
                    ToolTip="Reset all settings to default values"/>
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,0,12,0"
                    AutomationProperties.Name="Cancel"
                    ToolTip="Close without saving changes"
                    IsCancel="True"/>
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource PrimaryButton}"
                    AutomationProperties.Name="Save Settings"
                    ToolTip="Save changes and close"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
