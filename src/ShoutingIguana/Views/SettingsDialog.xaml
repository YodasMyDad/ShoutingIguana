<Window x:Class="ShoutingIguana.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="650"
        Width="900"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource TextPrimaryBrush}"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        ResizeMode="CanResize">
    
    <Grid Margin="0" KeyboardNavigation.TabNavigation="Cycle">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="0,0,0,1"
                Padding="24,20">
            <StackPanel Orientation="Horizontal">
                <Border Background="{StaticResource PrimaryBrush}"
                        Width="44" Height="44"
                        CornerRadius="8"
                        Margin="0,0,16,0">
                    <TextBlock Text="{StaticResource Icon.Settings}"
                               Style="{StaticResource Icon}"
                               FontSize="22"
                               Foreground="White"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Settings"
                               Style="{StaticResource TitleTextStyle}"
                               Margin="0"/>
                    <TextBlock Text="Configure application behavior and preferences"
                               Style="{StaticResource BodyTextStyle}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Tabbed Settings -->
        <TabControl Grid.Row="1" 
                    Style="{StaticResource StandardTabControl}"
                    Background="{StaticResource BackgroundBrush}"
                    KeyboardNavigation.TabNavigation="Local"
                    Margin="24,0">
            
            <!-- Crawling Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{StaticResource Icon.Web}"
                                   Style="{StaticResource Icon}"
                                   FontSize="16"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Crawling" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
                    <StackPanel MaxWidth="750">
                        
                        <!-- Performance Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,24">
                            <StackPanel>
                                <TextBlock Text="Performance Settings" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <!-- Concurrent Requests -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Concurrent Requests" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"
                                               AutomationProperties.AutomationId="ConcurrentRequestsLabel"/>
                                    <TextBox Text="{Binding ConcurrentRequests, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="0"
                                             FocusManager.IsFocusScope="False"
                                             AutomationProperties.Name="Concurrent Requests"
                                             ToolTip="Number of parallel requests (1-10)"/>
                                    <TextBlock Text="Number of parallel requests to make (1-10). Higher values speed up crawling but use more resources."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Timeout -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Request Timeout" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding TimeoutSeconds, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="1"
                                             AutomationProperties.Name="Request Timeout in Seconds"
                                             ToolTip="Maximum time in seconds to wait for a response"/>
                                    <TextBlock Text="Maximum time in seconds to wait for a page response (5-120 seconds recommended)."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Crawl Delay -->
                                <StackPanel Margin="0,0,0,0">
                                    <TextBlock Text="Crawl Delay" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding CrawlDelaySeconds, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="2"
                                             AutomationProperties.Name="Crawl Delay in Seconds"
                                             ToolTip="Delay between requests in seconds"/>
                                    <TextBlock Text="Delay between requests in seconds. Use to be polite to target servers (0-10 seconds)."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Crawl Limits Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,24">
                            <StackPanel>
                                <TextBlock Text="Crawl Limits" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <!-- Max Crawl Depth -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Maximum Crawl Depth" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding MaxCrawlDepth, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="3"
                                             AutomationProperties.Name="Maximum Crawl Depth"
                                             ToolTip="Maximum number of clicks from the start URL"/>
                                    <TextBlock Text="Maximum number of clicks from the start URL (1-20). Depth 1 = only pages directly linked from start URL."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Max URLs -->
                                <StackPanel Margin="0,0,0,0">
                                    <TextBlock Text="Maximum URLs to Crawl" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding MaxUrlsToCrawl, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="4"
                                             AutomationProperties.Name="Maximum URLs to Crawl"
                                             ToolTip="Maximum total URLs to crawl (0 = unlimited)"/>
                                    <TextBlock Text="Maximum total number of URLs to crawl. Set to 0 for unlimited (not recommended for large sites)."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Crawl Options Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Crawl Options" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <Border Background="{StaticResource BackgroundBrush}"
                                        BorderBrush="{StaticResource BorderLightBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12"
                                        Margin="0,0,0,10">
                                    <StackPanel>
                                        <CheckBox IsChecked="{Binding RespectRobotsTxt}"
                                                  FontSize="14"
                                                  Margin="0"
                                                  TabIndex="5"
                                                  AutomationProperties.Name="Respect Robots.txt">
                                            <TextBlock Text="Follow robots.txt exclusion rules" TextWrapping="Wrap"/>
                                        </CheckBox>
                                        <TextBlock Text="Recommended for ethical crawling. Respects website owner's crawling preferences."
                                                   Style="{StaticResource HelperText}"
                                                   Margin="32,6,0,0"/>
                                    </StackPanel>
                                </Border>

                                <Border Background="{StaticResource BackgroundBrush}"
                                        BorderBrush="{StaticResource BorderLightBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12">
                                    <StackPanel>
                                        <CheckBox IsChecked="{Binding UseSitemapXml}"
                                                  FontSize="14"
                                                  Margin="0"
                                                  TabIndex="6"
                                                  AutomationProperties.Name="Use Sitemap XML">
                                            <TextBlock Text="Discover URLs from sitemap.xml" TextWrapping="Wrap"/>
                                        </CheckBox>
                                        <TextBlock Text="Automatically checks robots.txt and common locations for sitemap.xml to discover URLs."
                                                   Style="{StaticResource HelperText}"
                                                   Margin="32,6,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Browser Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{StaticResource Icon.Globe}"
                                   Style="{StaticResource Icon}"
                                   FontSize="16"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Browser" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
                    <StackPanel MaxWidth="750">
                        
                        <!-- Browser Mode Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,24">
                            <StackPanel>
                                <TextBlock Text="Browser Mode" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <Border Background="{StaticResource BackgroundBrush}"
                                        BorderBrush="{StaticResource BorderLightBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12">
                                    <StackPanel>
                                        <CheckBox IsChecked="{Binding Headless}"
                                                  FontSize="14"
                                                  Margin="0"
                                                  TabIndex="0"
                                                  AutomationProperties.Name="Headless Mode">
                                            <TextBlock Text="Run browser in headless mode" TextWrapping="Wrap" FontWeight="SemiBold"/>
                                        </CheckBox>
                                        <TextBlock Text="Recommended for better performance. Browser runs in background without GUI, using less memory and CPU."
                                                   Style="{StaticResource HelperText}"
                                                   Margin="32,6,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Viewport Settings Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,24">
                            <StackPanel>
                                <TextBlock Text="Viewport Settings" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Viewport Width -->
                                    <StackPanel Grid.Column="0" Margin="0,0,0,0">
                                        <TextBlock Text="Viewport Width" 
                                                   Style="{StaticResource FormFieldLabel}"
                                                   Margin="0,0,0,8"/>
                                        <TextBox Text="{Binding ViewportWidth, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernTextBox}"
                                                 TabIndex="1"
                                                 AutomationProperties.Name="Viewport Width in Pixels"/>
                                        <TextBlock Text="Browser viewport width in pixels."
                                                   Style="{StaticResource HelperText}"/>
                                    </StackPanel>

                                    <!-- Viewport Height -->
                                    <StackPanel Grid.Column="2" Margin="0,0,0,0">
                                        <TextBlock Text="Viewport Height" 
                                                   Style="{StaticResource FormFieldLabel}"
                                                   Margin="0,0,0,8"/>
                                        <TextBox Text="{Binding ViewportHeight, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernTextBox}"
                                                 TabIndex="2"
                                                 AutomationProperties.Name="Viewport Height in Pixels"/>
                                        <TextBlock Text="Browser viewport height in pixels."
                                                   Style="{StaticResource HelperText}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Resource Management Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Resource Management" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <!-- Memory Limit -->
                                <StackPanel Margin="0,0,0,0">
                                    <TextBlock Text="Memory Limit" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding MemoryLimitMb, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="3"
                                             AutomationProperties.Name="Memory Limit in Megabytes"/>
                                    <TextBlock Text="Browser will automatically restart if memory usage exceeds this limit (in MB). Helps prevent crashes on long crawls."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Network Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{StaticResource Icon.Globe}"
                                   Style="{StaticResource Icon}"
                                   FontSize="16"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Network" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
                    <StackPanel MaxWidth="750">
                        
                        <!-- Proxy Settings Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,24">
                            <StackPanel>
                                <TextBlock Text="Proxy Settings" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <!-- Proxy Enable -->
                                <Border Background="{StaticResource BackgroundBrush}"
                                        BorderBrush="{StaticResource BorderLightBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12"
                                        Margin="0,0,0,16">
                                    <StackPanel>
                                        <CheckBox IsChecked="{Binding ProxyEnabled}"
                                                  FontSize="14"
                                                  Margin="0"
                                                  TabIndex="0"
                                                  AutomationProperties.Name="Enable Proxy">
                                            <TextBlock Text="Use proxy server for all connections" TextWrapping="Wrap" FontWeight="SemiBold"/>
                                        </CheckBox>
                                        <TextBlock Text="Route all crawl traffic through a proxy server. Useful for corporate environments or privacy."
                                                   Style="{StaticResource HelperText}"
                                                   Margin="32,6,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Proxy Type -->
                                <StackPanel Margin="0,0,0,16" IsEnabled="{Binding ProxyEnabled}">
                                    <TextBlock Text="Proxy Type" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <ComboBox SelectedIndex="{Binding SelectedProxyType}"
                                              Style="{StaticResource ModernComboBox}"
                                              TabIndex="1"
                                              AutomationProperties.Name="Proxy Type">
                                        <ComboBoxItem Content="HTTP"/>
                                        <ComboBoxItem Content="HTTPS"/>
                                        <ComboBoxItem Content="SOCKS5"/>
                                    </ComboBox>
                                    <TextBlock Text="Select the protocol used by your proxy server."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Server and Port -->
                                <Grid Margin="0,0,0,16" IsEnabled="{Binding ProxyEnabled}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Server" 
                                                   Style="{StaticResource FormFieldLabel}"
                                                   Margin="0,0,0,8"/>
                                        <TextBox Text="{Binding ProxyServer, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernTextBox}"
                                                 TabIndex="2"
                                                 AutomationProperties.Name="Proxy Server">
                                            <TextBox.Tag>proxy.example.com</TextBox.Tag>
                                        </TextBox>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Port" 
                                                   Style="{StaticResource FormFieldLabel}"
                                                   Margin="0,0,0,8"/>
                                        <TextBox Text="{Binding ProxyPort, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernTextBox}"
                                                 TabIndex="3"
                                                 AutomationProperties.Name="Proxy Port">
                                            <TextBox.Tag>8080</TextBox.Tag>
                                        </TextBox>
                                    </StackPanel>
                                </Grid>

                                <!-- Authentication -->
                                <Border Background="{StaticResource BackgroundBrush}"
                                        BorderBrush="{StaticResource BorderLightBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="12"
                                        Margin="0,0,0,16"
                                        IsEnabled="{Binding ProxyEnabled}">
                                    <StackPanel>
                                        <CheckBox IsChecked="{Binding ProxyRequiresAuth}"
                                                  FontSize="14"
                                                  Margin="0"
                                                  TabIndex="4"
                                                  AutomationProperties.Name="Proxy Requires Authentication">
                                            <TextBlock Text="Proxy requires authentication" TextWrapping="Wrap" FontWeight="SemiBold"/>
                                        </CheckBox>
                                    </StackPanel>
                                </Border>

                                <StackPanel Margin="0,0,0,16" IsEnabled="{Binding ProxyRequiresAuth}" Visibility="{Binding ProxyRequiresAuth, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Username" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding ProxyUsername, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="5"
                                             AutomationProperties.Name="Proxy Username"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,16" IsEnabled="{Binding ProxyRequiresAuth}" Visibility="{Binding ProxyRequiresAuth, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="Password" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <PasswordBox x:Name="ProxyPasswordBox"
                                                 TabIndex="6"
                                                 Style="{StaticResource ModernPasswordBox}"
                                                 AutomationProperties.Name="Proxy Password"
                                                 PasswordChanged="ProxyPasswordBox_OnPasswordChanged"/>
                                    <TextBlock Text="Password is encrypted using Windows DPAPI and stored securely."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Bypass List -->
                                <StackPanel Margin="0,0,0,16" IsEnabled="{Binding ProxyEnabled}">
                                    <TextBlock Text="Bypass List (comma-separated patterns)" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding ProxyBypassList, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="7"
                                             AutomationProperties.Name="Proxy Bypass List"
                                             AcceptsReturn="True"
                                             Height="60">
                                        <TextBox.Tag>localhost, *.internal.com, 192.168.*</TextBox.Tag>
                                    </TextBox>
                                    <TextBlock Text="Hosts matching these patterns will bypass the proxy (e.g., localhost, *.internal.com)."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Test Connection -->
                                <StackPanel Margin="0,0,0,0">
                                    <Button Command="{Binding TestProxyCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            HorizontalAlignment="Left"
                                            TabIndex="8"
                                            IsEnabled="{Binding ProxyEnabled}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{StaticResource Icon.Globe}"
                                                       Style="{StaticResource Icon}"
                                                       Width="16"
                                                       Height="16"
                                                       Margin="0,0,8,0"/>
                                            <TextBlock Text="Test Connection"/>
                                        </StackPanel>
                                    </Button>
                                    
                                    <TextBlock Text="{Binding ProxyTestResult}"
                                               Style="{StaticResource BodyTextStyle}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,12,0,0"
                                               TextWrapping="Wrap"
                                               Visibility="{Binding ProxyTestResult, Converter={StaticResource NullToVisibilityConverter}}"/>
                                    
                                    <ProgressBar IsIndeterminate="True"
                                                 Style="{StaticResource ModernProgressBar}"
                                                 Margin="0,12,0,0"
                                                 Height="4"
                                                 Visibility="{Binding IsTestingProxy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Connection Settings Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Connection Settings" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <StackPanel Margin="0,0,0,0">
                                    <TextBlock Text="Connection Timeout" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding ConnectionTimeoutSeconds, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"
                                             TabIndex="9"
                                             AutomationProperties.Name="Connection Timeout in Seconds"/>
                                    <TextBlock Text="Maximum time in seconds to wait for establishing a connection (5-120 seconds)."
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Data Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{StaticResource Icon.Folder}"
                                   Style="{StaticResource Icon}"
                                   FontSize="16"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Data" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
                    <StackPanel MaxWidth="750">
                        
                        <!-- Storage Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,24">
                            <StackPanel>
                                <TextBlock Text="Storage Settings" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <!-- Project Storage Location -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Project Storage Location" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                                                 Text="{Binding ProjectStoragePath, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource ModernTextBox}"
                                                 IsReadOnly="True"
                                                 Margin="0,0,8,0"/>
                                        <Button Grid.Column="1"
                                                Content="Browse..."
                                                Style="{StaticResource SecondaryButton}"
                                                Command="{Binding BrowseStoragePathCommand}"
                                                AutomationProperties.Name="Browse Storage Location"
                                                AutomationProperties.HelpText="Opens a folder browser to select a new storage location for project files"
                                                ToolTip="Select folder for project storage"/>
                                    </Grid>
                                    <TextBlock Text="Location where project databases and files are stored"
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Log Retention -->
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Log Retention (Days)" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding LogRetentionDays, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"/>
                                    <TextBlock Text="Logs older than this will be automatically deleted (0 = keep forever)"
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>

                                <!-- Auto-Checkpoint Interval -->
                                <StackPanel Margin="0,0,0,0">
                                    <TextBlock Text="Auto-Checkpoint Interval (URLs)" 
                                               Style="{StaticResource FormFieldLabel}"
                                               Margin="0,0,0,8"/>
                                    <TextBox Text="{Binding CheckpointInterval, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource ModernTextBox}"/>
                                    <TextBlock Text="Save crawl progress every N URLs for crash recovery"
                                               Style="{StaticResource HelperText}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Database Maintenance Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Database Maintenance" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <TextBlock Text="Optimize database performance by rebuilding indices and reclaiming space."
                                           TextWrapping="Wrap"
                                           Style="{StaticResource BodyTextStyle}"
                                           Margin="0,0,0,16"/>

                                <Button Command="{Binding OptimizeDatabaseCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        HorizontalAlignment="Left"
                                        AutomationProperties.Name="Optimize Database"
                                        AutomationProperties.HelpText="Rebuilds database indices and reclaims unused space to improve performance"
                                        ToolTip="Rebuild indices and reclaim space">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{StaticResource Icon.Cog}"
                                                   Style="{StaticResource Icon}"
                                                   Width="16"
                                                   Height="16"
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="Optimize Database"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Feeds Tab -->
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{StaticResource Icon.Globe}"
                                   Style="{StaticResource Icon}"
                                   FontSize="16"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Feeds" VerticalAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,20">
                    <StackPanel MaxWidth="750">
                        
                        <!-- NuGet Feeds Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Padding="24"
                                Margin="0,0,0,24">
                            <StackPanel>
                                <TextBlock Text="NuGet Package Feeds" 
                                           Style="{StaticResource FormSectionHeader}"
                                           Margin="0,0,0,16"
                                           AutomationProperties.HeadingLevel="Level2"/>

                                <TextBlock Text="Configure NuGet feeds for plugin discovery and installation."
                                           TextWrapping="Wrap"
                                           Style="{StaticResource BodyTextStyle}"
                                           Margin="0,0,0,16"/>

                                <DataGrid ItemsSource="{Binding Feeds}"
                                          Style="{StaticResource ModernDataGrid}"
                                          MaxHeight="300"
                                          Margin="0,0,0,16">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" 
                                                            Binding="{Binding Name}" 
                                                            Width="*"
                                                            MinWidth="120"/>
                                        <DataGridTextColumn Header="Feed URL" 
                                                            Binding="{Binding Url}" 
                                                            Width="2*"
                                                            MinWidth="300"/>
                                        <DataGridCheckBoxColumn Header="Enabled" 
                                                                Binding="{Binding IsEnabled}" 
                                                                Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <StackPanel Orientation="Horizontal">
                                    <Button Command="{Binding AddFeedCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,0,8,0"
                                            AutomationProperties.Name="Add NuGet Feed"
                                            AutomationProperties.HelpText="Adds a new NuGet package feed for plugin discovery"
                                            ToolTip="Add a custom NuGet feed">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="+" 
                                                       FontWeight="Bold"
                                                       FontSize="16"
                                                       Margin="0,0,6,0"/>
                                            <TextBlock Text="Add Feed"/>
                                        </StackPanel>
                                    </Button>
                                    <Button Command="{Binding RemoveFeedCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Margin="0,0,8,0"
                                            AutomationProperties.Name="Remove Selected Feed"
                                            AutomationProperties.HelpText="Removes the selected NuGet feed from the list"
                                            ToolTip="Remove the selected feed">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{StaticResource Icon.Delete}"
                                                       Style="{StaticResource Icon}"
                                                       Width="16"
                                                       Height="16"
                                                       Margin="0,0,8,0"/>
                                            <TextBlock Text="Remove"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Info Card -->
                        <Border Style="{StaticResource InfoCard}"
                                Padding="16">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <TextBlock Text="{StaticResource Icon.Info}"
                                               Style="{StaticResource Icon}"
                                               Width="20"
                                               Height="20"
                                               FontSize="20"
                                               Foreground="{StaticResource InfoBrush}"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Default Feed" 
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               Foreground="{StaticResource InfoBrush}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock Text="The default NuGet.org feed is always available and cannot be removed. Add custom feeds to access private or organization-specific plugins."
                                           TextWrapping="Wrap"
                                           FontSize="13"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           Margin="28,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Action Buttons -->
        <Border Grid.Row="2"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderLightBrush}"
                BorderThickness="0,1,0,0"
                Padding="24,16">
            <Grid>
                <Button Command="{Binding RestoreDefaultsCommand}"
                        Style="{StaticResource SecondaryButton}"
                        HorizontalAlignment="Left"
                        TabIndex="100"
                        AutomationProperties.Name="Restore Default Settings"
                        AutomationProperties.HelpText="Resets all settings to their default values"
                        ToolTip="Reset all settings to default values">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{StaticResource Icon.Refresh}"
                                   Style="{StaticResource Icon}"
                                   Width="16"
                                   Height="16"
                                   Margin="0,0,6,0"/>
                        <TextBlock Text="Restore Defaults" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,12,0"
                            TabIndex="101"
                            AutomationProperties.Name="Cancel"
                            AutomationProperties.HelpText="Closes the settings dialog without saving changes"
                            ToolTip="Close without saving changes (Esc)"
                            IsCancel="True"/>
                    <Button Command="{Binding SaveCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Height="48"
                            Padding="32,12"
                            TabIndex="102"
                            AutomationProperties.Name="Save Settings"
                            AutomationProperties.HelpText="Saves all settings changes and closes the dialog"
                            ToolTip="Save changes and close (Enter)"
                            IsDefault="True">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{StaticResource Icon.Save}"
                                       Style="{StaticResource Icon}"
                                       Width="16"
                                       Height="16"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Save Settings" 
                                       VerticalAlignment="Center"
                                       FontSize="15"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
