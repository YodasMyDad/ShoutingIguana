<Window x:Class="ShoutingIguana.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Settings"
        Height="650"
        Width="850"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display"
        ResizeMode="CanResize">
    
    <Grid Margin="24,24,24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tabbed Settings -->
        <TabControl Grid.Row="0" 
                    Style="{StaticResource StandardTabControl}">
            
            <!-- Crawling Tab -->
            <TabItem Header="Crawling">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32,40,32,32">
                    <StackPanel MaxWidth="700">

                        <StackPanel MaxWidth="500">
                            <TextBox Text="{Binding ConcurrentRequests, UpdateSourceTrigger=PropertyChanged}"
                                     md:HintAssist.Hint="Concurrent Requests"
                                     md:HintAssist.HelperText="Number of parallel requests (1-10)"
                                     Style="{StaticResource StandardTextBox}"
                                     Margin="0,0,0,28"
                                     TabIndex="0"
                                     AutomationProperties.Name="Concurrent Requests"
                                     ToolTip="Number of parallel requests to make (1-10)"/>

                            <TextBox Text="{Binding TimeoutSeconds, UpdateSourceTrigger=PropertyChanged}"
                                     md:HintAssist.Hint="Timeout (seconds)"
                                     md:HintAssist.HelperText="Request timeout in seconds (5-300)"
                                     Style="{StaticResource StandardTextBox}"
                                     Margin="0,0,0,28"
                                     TabIndex="1"
                                     AutomationProperties.Name="Request Timeout"
                                     ToolTip="Request timeout in seconds"/>

                            <TextBox Text="{Binding MaxCrawlDepth, UpdateSourceTrigger=PropertyChanged}"
                                     md:HintAssist.Hint="Max Crawl Depth"
                                     md:HintAssist.HelperText="Maximum link depth from start URL (1-20)"
                                     Style="{StaticResource StandardTextBox}"
                                     Margin="0,0,0,28"
                                     TabIndex="2"
                                     AutomationProperties.Name="Maximum Crawl Depth"
                                     ToolTip="Maximum number of clicks from start URL"/>

                            <TextBox Text="{Binding MaxUrlsToCrawl, UpdateSourceTrigger=PropertyChanged}"
                                     md:HintAssist.Hint="Max URLs to Crawl"
                                     md:HintAssist.HelperText="Maximum URLs to crawl (0 for unlimited)"
                                     Style="{StaticResource StandardTextBox}"
                                     Margin="0,0,0,28"
                                     TabIndex="3"
                                     AutomationProperties.Name="Maximum URLs"
                                     ToolTip="Maximum number of URLs to crawl (0 = unlimited)"/>

                            <TextBox Text="{Binding CrawlDelaySeconds, UpdateSourceTrigger=PropertyChanged}"
                                     md:HintAssist.Hint="Crawl Delay (seconds)"
                                     md:HintAssist.HelperText="Delay between requests for politeness"
                                     Style="{StaticResource StandardTextBox}"
                                     Margin="0,0,0,28"
                                     TabIndex="4"
                                     AutomationProperties.Name="Crawl Delay"
                                     ToolTip="Delay between requests in seconds"/>

                            <CheckBox IsChecked="{Binding RespectRobotsTxt}"
                                      Content="Follow robots.txt exclusion rules"
                                      FontSize="14"
                                      Margin="0,8,0,0"
                                      TabIndex="6"
                                      AutomationProperties.Name="Respect Robots.txt"
                                      ToolTip="Follow robots.txt exclusion rules"/>

                            <CheckBox IsChecked="{Binding UseSitemapXml}"
                                      Content="Discover URLs from sitemap.xml"
                                      FontSize="14"
                                      Margin="0,12,0,0"
                                      TabIndex="7"
                                      AutomationProperties.Name="Use Sitemap XML"
                                      ToolTip="Check robots.txt and common locations for sitemap.xml and enqueue discovered URLs"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Browser Tab -->
            <TabItem Header="Browser">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32,40,32,32">
                    <StackPanel MaxWidth="500">
                        <CheckBox IsChecked="{Binding Headless}"
                                  Content="Run browser in headless mode (recommended)"
                                  FontSize="14"
                                  Margin="0,0,0,28"
                                  TabIndex="0"
                                  AutomationProperties.Name="Headless Mode"
                                  ToolTip="Run browser in background without GUI (faster)"/>

                        <TextBox Text="{Binding ViewportWidth, UpdateSourceTrigger=PropertyChanged}"
                                 md:HintAssist.Hint="Viewport Width (pixels)"
                                 md:HintAssist.HelperText="Browser viewport width in pixels (320-3840)"
                                 Style="{StaticResource StandardTextBox}"
                                 Margin="0,0,0,28"
                                 TabIndex="1"
                                 AutomationProperties.Name="Viewport Width"
                                 ToolTip="Browser viewport width in pixels"/>

                        <TextBox Text="{Binding ViewportHeight, UpdateSourceTrigger=PropertyChanged}"
                                 md:HintAssist.Hint="Viewport Height (pixels)"
                                 md:HintAssist.HelperText="Browser viewport height in pixels (240-2160)"
                                 Style="{StaticResource StandardTextBox}"
                                 Margin="0,0,0,28"
                                 TabIndex="2"
                                 AutomationProperties.Name="Viewport Height"
                                 ToolTip="Browser viewport height in pixels"/>

                        <TextBox Text="{Binding MemoryLimitMb, UpdateSourceTrigger=PropertyChanged}"
                                 md:HintAssist.Hint="Memory Limit (MB)"
                                 md:HintAssist.HelperText="Browser restarts if memory exceeds this limit (512+)"
                                 Style="{StaticResource StandardTextBox}"
                                 Margin="0,0,0,28"
                                 TabIndex="3"
                                 AutomationProperties.Name="Memory Limit"
                                 ToolTip="Browser restarts automatically if memory exceeds this limit"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Plugins Tab -->
            <TabItem Header="Plugins">
                <Grid Margin="{StaticResource SpacingXL}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0"
                              ItemsSource="{Binding Plugins}"
                              Style="{StaticResource ModernDataGrid}"
                              MaxHeight="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" 
                                                Binding="{Binding Name}" 
                                                Width="*"
                                                FontWeight="SemiBold"/>
                            <DataGridTextColumn Header="Version" 
                                                Binding="{Binding Version}" 
                                                Width="120"
                                                FontFamily="Consolas"/>
                            <DataGridCheckBoxColumn Header="Enabled" 
                                                    Binding="{Binding IsEnabled}" 
                                                    Width="100"
                                                    IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <md:Card Grid.Row="1" 
                             Padding="16" 
                             Margin="0,16,0,0" 
                             Background="#E3F2FD"
                             md:ElevationAssist.Elevation="Dp0"
                             UniformCornerRadius="6">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <md:PackIcon Kind="InformationOutline"
                                             Width="20"
                                             Height="20"
                                             Foreground="{StaticResource InfoBrush}"
                                             VerticalAlignment="Center"
                                             Margin="0,0,8,0"/>
                                <TextBlock Text="Stage 2 Limitation" 
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource InfoBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="In Stage 2, all plugins are always enabled. Plugin enable/disable and hot-loading will be available in Stage 3."
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="28,0,0,0"/>
                        </StackPanel>
                    </md:Card>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,24,0,0">
            <Button Content="Restore Defaults"
                    Command="{Binding RestoreDefaultsCommand}"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,0,12,0"
                    TabIndex="100"
                    AutomationProperties.Name="Restore Default Settings"
                    ToolTip="Reset all settings to default values"/>
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,0,12,0"
                    TabIndex="101"
                    AutomationProperties.Name="Cancel"
                    ToolTip="Close without saving changes"
                    IsCancel="True"/>
            <Button Content="Save"
                    Command="{Binding SaveCommand}"
                    Style="{StaticResource PrimaryButton}"
                    TabIndex="102"
                    AutomationProperties.Name="Save Settings"
                    ToolTip="Save changes and close"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
