<UserControl x:Class="ShoutingIguana.Views.CrawlDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="{StaticResource SpacingL}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="{StaticResource SpacingL}">
                <TextBlock Text="Crawl Progress"
                           Style="{StaticResource DisplayTextStyle}"
                           VerticalAlignment="Center"
                           AutomationProperties.HeadingLevel="Level1"
                           AutomationProperties.AutomationId="CrawlProgressHeading"/>
            </Grid>

            <!-- Progress Bar Card -->
            <Border Grid.Row="1" 
                    Style="{StaticResource StandardCard}"
                    Margin="0,0,0,24">
                <StackPanel>
                    <Grid Margin="0,0,0,12">
                        <TextBlock Text="Overall Progress"
                                   Style="{StaticResource TitleTextStyle}"
                                   VerticalAlignment="Center"
                                   AutomationProperties.HeadingLevel="Level2"/>
                        <TextBlock Text="{Binding ProgressPercentage, StringFormat={}{0:F1}%}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="24"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   AutomationProperties.Name="Progress Percentage"/>
                    </Grid>
                    
                    <ProgressBar Value="{Binding ProgressPercentage}"
                                 Maximum="100"
                                 Style="{StaticResource ModernProgressBar}"
                                 Margin="0,8,0,0"
                                 AutomationProperties.Name="Crawl Progress Bar"/>
                </StackPanel>
            </Border>

            <!-- Metric Cards Grid -->
            <Grid Grid.Row="2" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- URLs Crawled Card -->
                <Border Grid.Row="0" Grid.Column="0" 
                        Style="{StaticResource MetricCard}"
                        BorderBrush="{StaticResource SuccessBrush}"
                        BorderThickness="4,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="{StaticResource Icon.CheckCircle}"
                                       Style="{StaticResource Icon}"
                                       Width="20" 
                                       Height="20"
                                       FontSize="20"
                                       Foreground="{StaticResource SuccessBrush}"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="URLs Crawled"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding UrlsCrawled}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="32"
                                   Foreground="{StaticResource SuccessBrush}"/>
                    </Grid>
                </Border>

                <!-- Total Discovered Card -->
                <Border Grid.Row="0" Grid.Column="2" 
                        Style="{StaticResource MetricCard}"
                        BorderBrush="{StaticResource InfoBrush}"
                        BorderThickness="4,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="{StaticResource Icon.Link}"
                                       Style="{StaticResource Icon}"
                                       Width="20" 
                                       Height="20"
                                       FontSize="20"
                                       Foreground="{StaticResource InfoBrush}"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Total Discovered"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding TotalDiscovered}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="32"
                                   Foreground="{StaticResource InfoBrush}"/>
                    </Grid>
                </Border>

                <!-- Queue Size Card -->
                <Border Grid.Row="0" Grid.Column="4" 
                        Style="{StaticResource MetricCard}"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        BorderThickness="4,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="{StaticResource Icon.List}"
                                       Style="{StaticResource Icon}"
                                       Width="20" 
                                       Height="20"
                                       FontSize="20"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Queue Size"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding QueueSize}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="32"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                    </Grid>
                </Border>

                <!-- Active Workers Card -->
                <Border Grid.Row="2" Grid.Column="0" 
                        Style="{StaticResource MetricCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="{StaticResource Icon.Cog}"
                                       Style="{StaticResource Icon}"
                                       Width="20" 
                                       Height="20"
                                       FontSize="20"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Active Workers"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding ActiveWorkers}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="32"/>
                </Grid>
                </Border>

                <!-- Errors Card -->
                <Border Grid.Row="2" Grid.Column="2" 
                        Style="{StaticResource MetricCard}"
                        BorderBrush="{StaticResource ErrorBrush}"
                        BorderThickness="4,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="{StaticResource Icon.AlertCircle}"
                                       Style="{StaticResource Icon}"
                                       Width="20" 
                                       Height="20"
                                       FontSize="20"
                                       Foreground="{StaticResource ErrorBrush}"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Errors"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding ErrorCount}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="32"
                                   Foreground="{StaticResource ErrorBrush}"/>
                    </Grid>
                </Border>

                <!-- Elapsed Time Card -->
                <Border Grid.Row="2" Grid.Column="4" 
                        Style="{StaticResource MetricCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="{StaticResource Icon.Clock}"
                                       Style="{StaticResource Icon}"
                                       Width="20" 
                                       Height="20"
                                       FontSize="20"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="Elapsed Time"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding ElapsedTime}"
                                   Style="{StaticResource TitleTextStyle}"
                                   FontSize="18"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Recent Activity Card -->
            <Border Grid.Row="3" 
                    Style="{StaticResource StandardCard}"
                    Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0"
                               Text="Recent Activity"
                               Style="{StaticResource TitleTextStyle}"
                               Margin="0,0,0,12"
                               AutomationProperties.HeadingLevel="Level2"/>
                    
                    <Border Grid.Row="1"
                            Background="{StaticResource SurfaceAltBrush}"
                            CornerRadius="6"
                            Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="{StaticResource Icon.Web}"
                                   Style="{StaticResource Icon}"
                                   Grid.Column="0"
                                   Width="18"
                                   Height="18"
                                   FontSize="18"
                                   Margin="0,0,12,0"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                        
                            <TextBlock Grid.Column="1"
                                       Text="{Binding RecentActivity}"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                       Style="{StaticResource BodyTextStyle}"
                                       FontFamily="Consolas"/>
                    </Grid>
                </Border>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="4" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Command="{Binding StartCrawlCommand}"
                        IsEnabled="{Binding IsCrawling, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource PrimaryButton}"
                        Padding="32,12"
                        Margin="0,0,12,0"
                        TabIndex="0"
                        IsDefault="True"
                        AutomationProperties.Name="Start Crawl"
                        ToolTip="Begin crawling">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{StaticResource Icon.Play}"
                                   Style="{StaticResource Icon}"
                                   Width="18" 
                                   Height="18"
                                   FontSize="18"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Start Crawl" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding StopCrawlCommand}"
                        IsEnabled="{Binding IsCrawling}"
                        Style="{StaticResource DangerButton}"
                        Padding="32,12"
                        TabIndex="1"
                        AutomationProperties.Name="Stop Crawl"
                        ToolTip="Stop the current crawl">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{StaticResource Icon.Stop}"
                                   Style="{StaticResource Icon}"
                                   Width="18" 
                                   Height="18"
                                   FontSize="18"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Stop Crawl" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
    </Grid>
    </ScrollViewer>
</UserControl>
