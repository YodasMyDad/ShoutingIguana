<UserControl x:Class="ShoutingIguana.Views.CrawlDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="{StaticResource BackgroundBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="{StaticResource SpacingL}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Crawl Progress"
                       Style="{StaticResource DisplayTextStyle}"
                       Margin="{StaticResource SpacingL}"
                       AutomationProperties.HeadingLevel="Level1"/>

            <!-- Progress Bar Card -->
            <md:Card Grid.Row="1" 
                     Style="{StaticResource StandardCard}"
                     Margin="0,0,0,24">
                <StackPanel>
                    <Grid Margin="0,0,0,12">
                        <TextBlock Text="Overall Progress"
                                   Style="{StaticResource TitleTextStyle}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ProgressPercentage, StringFormat={}{0:F1}%}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="24"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                    </Grid>
                    
                    <ProgressBar Value="{Binding ProgressPercentage}"
                                 Maximum="100"
                                 Style="{StaticResource ModernProgressBar}"
                                 Height="12"
                                 Margin="0,8,0,0"/>
                </StackPanel>
            </md:Card>

            <!-- Metric Cards Grid -->
            <Grid Grid.Row="2" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- URLs Crawled Card -->
                <md:Card Grid.Row="0" Grid.Column="0" 
                         Style="{StaticResource MetricCard}"
                         BorderBrush="{StaticResource SuccessBrush}"
                         BorderThickness="4,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <md:PackIcon Kind="CheckCircleOutline" 
                                         Width="20" 
                                         Height="20"
                                         Foreground="{StaticResource SuccessBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0,0,8,0"/>
                            <TextBlock Text="URLs Crawled"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding UrlsCrawled}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="32"
                                   Foreground="{StaticResource SuccessBrush}"/>
                    </Grid>
                </md:Card>

                <!-- Total Discovered Card -->
                <md:Card Grid.Row="0" Grid.Column="2" 
                         Style="{StaticResource MetricCard}"
                         BorderBrush="{StaticResource InfoBrush}"
                         BorderThickness="4,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <md:PackIcon Kind="LinkVariant" 
                                         Width="20" 
                                         Height="20"
                                         Foreground="{StaticResource InfoBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0,0,8,0"/>
                            <TextBlock Text="Total Discovered"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding TotalDiscovered}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="32"
                                   Foreground="{StaticResource InfoBrush}"/>
                    </Grid>
                </md:Card>

                <!-- Queue Size Card -->
                <md:Card Grid.Row="0" Grid.Column="4" 
                         Style="{StaticResource MetricCard}"
                         BorderBrush="{StaticResource PrimaryBrush}"
                         BorderThickness="4,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <md:PackIcon Kind="FormatListBulleted" 
                                         Width="20" 
                                         Height="20"
                                         Foreground="{StaticResource PrimaryBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0,0,8,0"/>
                            <TextBlock Text="Queue Size"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding QueueSize}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="32"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                    </Grid>
                </md:Card>

                <!-- Active Workers Card -->
                <md:Card Grid.Row="2" Grid.Column="0" 
                         Style="{StaticResource MetricCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <md:PackIcon Kind="Cog" 
                                         Width="20" 
                                         Height="20"
                                         Foreground="{StaticResource TextSecondaryBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0,0,8,0"/>
                            <TextBlock Text="Active Workers"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding ActiveWorkers}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="32"/>
                </Grid>
                </md:Card>

                <!-- Errors Card -->
                <md:Card Grid.Row="2" Grid.Column="2" 
                         Style="{StaticResource MetricCard}"
                         BorderBrush="{StaticResource ErrorBrush}"
                         BorderThickness="4,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <md:PackIcon Kind="AlertCircleOutline" 
                                         Width="20" 
                                         Height="20"
                                         Foreground="{StaticResource ErrorBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0,0,8,0"/>
                            <TextBlock Text="Errors"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding ErrorCount}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="32"
                                   Foreground="{StaticResource ErrorBrush}"/>
                    </Grid>
                </md:Card>

                <!-- Elapsed Time Card -->
                <md:Card Grid.Row="2" Grid.Column="4" 
                         Style="{StaticResource MetricCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                            <md:PackIcon Kind="ClockOutline" 
                                         Width="20" 
                                         Height="20"
                                         Foreground="{StaticResource TextSecondaryBrush}"
                                         VerticalAlignment="Center"
                                         Margin="0,0,8,0"/>
                            <TextBlock Text="Elapsed Time"
                                       Style="{StaticResource BodyTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding ElapsedTime}"
                                   Style="{StaticResource TitleTextStyle}"
                                   FontSize="18"/>
                    </Grid>
                </md:Card>
            </Grid>

            <!-- Recent Activity Card -->
            <md:Card Grid.Row="3" 
                     Style="{StaticResource StandardCard}"
                     Margin="0,0,0,24">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0"
                               Text="Recent Activity"
                               Style="{StaticResource TitleTextStyle}"
                               Margin="0,0,0,12"/>
                    
                    <Border Grid.Row="1"
                            Background="{StaticResource SurfaceAltBrush}"
                            CornerRadius="6"
                            Padding="16,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <md:PackIcon Kind="Web"
                                     Grid.Column="0"
                                         Width="18"
                                         Height="18"
                                     VerticalAlignment="Center"
                                         Margin="0,0,12,0"
                                         Foreground="{StaticResource PrimaryBrush}"/>
                        
                            <TextBlock Grid.Column="1"
                                       Text="{Binding RecentActivity}"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                       Style="{StaticResource BodyTextStyle}"
                                       FontFamily="Consolas"/>
                    </Grid>
                </Border>
                </Grid>
            </md:Card>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="4" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button Command="{Binding StartCrawlCommand}"
                        IsEnabled="{Binding IsCrawling, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource PrimaryButton}"
                        Foreground="White"
                        Padding="32,12"
                        Margin="0,0,12,0"
                        AutomationProperties.Name="Start Crawl"
                        ToolTip="Begin crawling">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon Kind="Play" 
                                     Width="18" 
                                     Height="18"
                                     VerticalAlignment="Center"
                                     Foreground="White"
                                     Margin="0,0,8,0"/>
                        <TextBlock Text="Start Crawl" 
                                   VerticalAlignment="Center"
                                   Foreground="White"/>
                    </StackPanel>
                </Button>
                
                <Button Command="{Binding StopCrawlCommand}"
                        IsEnabled="{Binding IsCrawling}"
                        Style="{StaticResource DangerButton}"
                        Foreground="White"
                        Padding="32,12"
                        AutomationProperties.Name="Stop Crawl"
                        ToolTip="Stop the current crawl">
                    <StackPanel Orientation="Horizontal">
                        <md:PackIcon Kind="Stop" 
                                     Width="18" 
                                     Height="18"
                                     VerticalAlignment="Center"
                                     Foreground="White"
                                     Margin="0,0,8,0"/>
                        <TextBlock Text="Stop Crawl" 
                                   VerticalAlignment="Center"
                                   Foreground="White"/>
                    </StackPanel>
                </Button>
            </StackPanel>
    </Grid>
    </ScrollViewer>
</UserControl>
