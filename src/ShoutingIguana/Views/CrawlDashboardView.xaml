<UserControl x:Class="ShoutingIguana.Views.CrawlDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource BackgroundBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  KeyboardNavigation.TabNavigation="Local"
                  Focusable="False">
        <Grid Margin="{StaticResource SpacingL}" KeyboardNavigation.TabNavigation="Local">
            <Grid.RenderTransform>
                <TranslateTransform/>
            </Grid.RenderTransform>
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                             From="20" To="0" Duration="0:0:0.4"
                                             DecelerationRatio="0.7"/>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1" Duration="0:0:0.4"
                                             DecelerationRatio="0.7"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource SurfaceBrush}"
                    CornerRadius="8"
                    Padding="24"
                    Margin="0,0,0,24"
                    SnapsToDevicePixels="True">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.06"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource SuccessBrush}"
                            Width="44" Height="44"
                            CornerRadius="8"
                            Margin="0,0,16,0">
                        <TextBlock Text="{StaticResource Icon.CheckCircle}"
                                   Style="{StaticResource Icon}"
                                   FontSize="22"
                                   Foreground="White"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Crawl Progress"
                                       Style="{StaticResource DisplayTextStyle}"
                                       FontSize="24"
                                       Margin="0"
                                       AutomationProperties.HeadingLevel="Level1"
                                       AutomationProperties.LiveSetting="Polite"
                                       AutomationProperties.AutomationId="CrawlProgressHeading"/>
                            <Border Background="{StaticResource WarningBrush}"
                                    CornerRadius="4"
                                    Padding="8,4"
                                    Margin="12,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsPaused, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="PAUSED"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="White"/>
                            </Border>
                        </StackPanel>
                        <TextBlock Text="Real-time crawling statistics and activity"
                                   Style="{StaticResource BodyTextStyle}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Empty State (when not crawling and no data) -->
            <Border Grid.Row="1" 
                    Style="{StaticResource InfoCard}"
                    Margin="0,0,0,24"
                    Visibility="{Binding ShowEmptyState, Converter={StaticResource BooleanToVisibilityConverter}}"
                    x:Name="EmptyStateCard">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="{StaticResource Icon.Info}"
                                   Style="{StaticResource Icon}"
                                   Width="20" Height="20"
                                   FontSize="20"
                                   Foreground="{StaticResource InfoBrush}"
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="Ready to Crawl" 
                                   Style="{StaticResource TitleTextStyle}"
                                   FontSize="16"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Configure your project settings and click 'Start Crawl' to begin analyzing your website."
                               TextWrapping="Wrap"
                               Style="{StaticResource BodyTextStyle}"
                               Margin="28,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Progress Bar Card -->
            <Border Grid.Row="2" 
                    Style="{StaticResource Card}"
                    Padding="32"
                    Margin="0,0,0,24">
                <Grid>
                    <!-- Skeleton Progress Card (shown while loading) -->
                    <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <Rectangle Style="{StaticResource SkeletonCell}" Width="200" Height="24" Margin="0,0,0,20" HorizontalAlignment="Left"/>
                            <Rectangle Style="{StaticResource SkeletonCell}" Margin="0,0,0,8"/>
                            <Grid>
                                <Rectangle Style="{StaticResource SkeletonCell}" Width="40" Height="12" HorizontalAlignment="Left"/>
                                <Rectangle Style="{StaticResource SkeletonCell}" Width="40" Height="12" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Actual Progress Card -->
                    <Grid Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Row="0" Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Background="{StaticResource PrimaryBrush}"
                                    Width="36" Height="36"
                                    CornerRadius="6"
                                    Margin="0,0,12,0">
                                <TextBlock Text="{StaticResource Icon.ChartBar}"
                                           Style="{StaticResource Icon}"
                                           FontSize="20"
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="Overall Progress"
                                       Style="{StaticResource TitleTextStyle}"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       AutomationProperties.HeadingLevel="Level2"/>
                        </StackPanel>
                        <TextBlock Text="{Binding ProgressPercentage, StringFormat={}{0:F1}%}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="36"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   FontWeight="Bold"
                                   AutomationProperties.Name="Progress Percentage"/>
                    </Grid>
                    
                        <StackPanel Grid.Row="1">
                            <ProgressBar Value="{Binding ProgressPercentage}"
                                         Maximum="100"
                                         Height="16"
                                         Style="{StaticResource ModernProgressBar}"
                                         AutomationProperties.Name="Crawl Progress Bar"/>
                            <Grid Margin="0,8,0,0">
                                <TextBlock Text="0%"
                                           Style="{StaticResource CaptionTextStyle}"
                                           HorizontalAlignment="Left"/>
                                <TextBlock Text="100%"
                                           Style="{StaticResource CaptionTextStyle}"
                                           HorizontalAlignment="Right"/>
                            </Grid>
                            <TextBlock Text="{Binding StatusMessage}"
                                       Style="{StaticResource CaptionTextStyle}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,12,0,0"
                                       HorizontalAlignment="Center"
                                       Visibility="{Binding IsCrawling, Converter={StaticResource BooleanToVisibilityConverter}}"
                                       AutomationProperties.LiveSetting="Polite"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Metric Cards Grid -->
            <Grid Grid.Row="3" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Skeleton Metric Cards (shown while loading) -->
                <Border Grid.Row="0" Grid.Column="0" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Rectangle Grid.Row="0" Style="{StaticResource SkeletonCell}" Width="140" Height="20" Margin="0,0,0,12"/>
                        <Rectangle Grid.Row="1" Style="{StaticResource SkeletonCell}" Width="80" Height="36"/>
                    </Grid>
                </Border>
                
                <Border Grid.Row="0" Grid.Column="2" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Rectangle Grid.Row="0" Style="{StaticResource SkeletonCell}" Width="140" Height="20" Margin="0,0,0,12"/>
                        <Rectangle Grid.Row="1" Style="{StaticResource SkeletonCell}" Width="80" Height="36"/>
                    </Grid>
                </Border>
                
                <Border Grid.Row="0" Grid.Column="4" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Rectangle Grid.Row="0" Style="{StaticResource SkeletonCell}" Width="140" Height="20" Margin="0,0,0,12"/>
                        <Rectangle Grid.Row="1" Style="{StaticResource SkeletonCell}" Width="80" Height="36"/>
                    </Grid>
                </Border>
                
                <Border Grid.Row="2" Grid.Column="0" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Rectangle Grid.Row="0" Style="{StaticResource SkeletonCell}" Width="140" Height="20" Margin="0,0,0,12"/>
                        <Rectangle Grid.Row="1" Style="{StaticResource SkeletonCell}" Width="80" Height="36"/>
                    </Grid>
                </Border>
                
                <Border Grid.Row="2" Grid.Column="2" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Rectangle Grid.Row="0" Style="{StaticResource SkeletonCell}" Width="140" Height="20" Margin="0,0,0,12"/>
                        <Rectangle Grid.Row="1" Style="{StaticResource SkeletonCell}" Width="80" Height="36"/>
                    </Grid>
                </Border>
                
                <Border Grid.Row="2" Grid.Column="4" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Rectangle Grid.Row="0" Style="{StaticResource SkeletonCell}" Width="140" Height="20" Margin="0,0,0,12"/>
                        <Rectangle Grid.Row="1" Style="{StaticResource SkeletonCell}" Width="80" Height="36"/>
                    </Grid>
                </Border>

                <!-- URLs Crawled Card -->
                <Border Grid.Row="0" Grid.Column="0" 
                        Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        BorderBrush="{StaticResource SuccessBrush}"
                        BorderThickness="0,0,0,4"
                        SnapsToDevicePixels="True"
                        AutomationProperties.Name="URLs Crawled Metric"
                        AutomationProperties.LiveSetting="Polite"
                        AutomationProperties.HelpText="Number of URLs successfully crawled">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{StaticResource SuccessBrush}"
                                    Width="32" Height="32"
                                    CornerRadius="6"
                                    Margin="0,0,10,0">
                                <TextBlock Text="{StaticResource Icon.CheckCircle}"
                                           Style="{StaticResource Icon}"
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="URLs Crawled"
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding UrlsCrawled}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource SuccessBrush}"
                                   AutomationProperties.LiveSetting="Polite"
                                   AutomationProperties.Name="URLs Crawled Count"/>
                    </Grid>
                </Border>

                <!-- Total Discovered Card -->
                <Border Grid.Row="0" Grid.Column="2" 
                        Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        BorderBrush="{StaticResource InfoBrush}"
                        BorderThickness="0,0,0,4"
                        SnapsToDevicePixels="True"
                        AutomationProperties.Name="Total Discovered URLs Metric"
                        AutomationProperties.LiveSetting="Polite"
                        AutomationProperties.HelpText="Total number of unique URLs discovered">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{StaticResource InfoBrush}"
                                    Width="32" Height="32"
                                    CornerRadius="6"
                                    Margin="0,0,10,0">
                                <TextBlock Text="{StaticResource Icon.Link}"
                                           Style="{StaticResource Icon}"
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="Total Discovered"
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding TotalDiscovered}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource InfoBrush}"/>
                    </Grid>
                </Border>

                <!-- Queue Size Card -->
                <Border Grid.Row="0" Grid.Column="4" 
                        Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        BorderBrush="{StaticResource PrimaryBrush}"
                        BorderThickness="0,0,0,4"
                        SnapsToDevicePixels="True"
                        AutomationProperties.Name="Crawl Queue Size Metric"
                        AutomationProperties.LiveSetting="Polite"
                        AutomationProperties.HelpText="Number of URLs waiting to be crawled">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{StaticResource PrimaryBrush}"
                                    Width="32" Height="32"
                                    CornerRadius="6"
                                    Margin="0,0,10,0">
                                <TextBlock Text="{StaticResource Icon.List}"
                                           Style="{StaticResource Icon}"
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="Queue Size"
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding QueueSize}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"/>
                    </Grid>
                </Border>

                <!-- Active Workers Card -->
                <Border Grid.Row="2" Grid.Column="0" 
                        Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{StaticResource TextSecondaryBrush}"
                                    Width="32" Height="32"
                                    CornerRadius="6"
                                    Margin="0,0,10,0">
                                <TextBlock Text="{StaticResource Icon.Cog}"
                                           Style="{StaticResource Icon}"
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="Active Workers"
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding ActiveWorkers}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="36"
                                   FontWeight="Bold"/>
                </Grid>
                </Border>

                <!-- Errors Card -->
                <Border Grid.Row="2" Grid.Column="2" 
                        Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        BorderBrush="{StaticResource ErrorBrush}"
                        BorderThickness="0,0,0,4"
                        SnapsToDevicePixels="True"
                        AutomationProperties.Name="Error Count Metric"
                        AutomationProperties.LiveSetting="Assertive"
                        AutomationProperties.HelpText="Number of errors encountered during crawl">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{StaticResource ErrorBrush}"
                                    Width="32" Height="32"
                                    CornerRadius="6"
                                    Margin="0,0,10,0">
                                <TextBlock Text="{StaticResource Icon.AlertCircle}"
                                           Style="{StaticResource Icon}"
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="Errors"
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding ErrorCount}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource ErrorBrush}"/>
                    </Grid>
                </Border>

                <!-- Elapsed Time Card -->
                <Border Grid.Row="2" Grid.Column="4" 
                        Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="8"
                        Padding="20"
                        SnapsToDevicePixels="True">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="4" ShadowDepth="1" Opacity="0.06"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{StaticResource TextSecondaryBrush}"
                                    Width="32" Height="32"
                                    CornerRadius="6"
                                    Margin="0,0,10,0">
                                <TextBlock Text="{StaticResource Icon.Clock}"
                                           Style="{StaticResource Icon}"
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="Elapsed Time"
                                       Style="{StaticResource BodyTextStyle}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1"
                                   Text="{Binding ElapsedTime}"
                                   Style="{StaticResource DisplayTextStyle}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   FontFamily="Consolas"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Recent Activity Card -->
            <Border Grid.Row="4" 
                    Style="{StaticResource Card}"
                    Padding="24"
                    Margin="0,0,0,32">
                <Grid>
                    <!-- Skeleton Activity Card (shown while loading) -->
                    <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <Rectangle Style="{StaticResource SkeletonCell}" Width="160" Height="20" Margin="0,0,0,16" HorizontalAlignment="Left"/>
                            <Rectangle Style="{StaticResource SkeletonCell}" Height="48"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Actual Activity Card -->
                    <Grid Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <Border Background="{StaticResource InfoBrush}"
                                Width="32" Height="32"
                                CornerRadius="6"
                                Margin="0,0,12,0">
                            <TextBlock Text="{StaticResource Icon.Web}"
                                       Style="{StaticResource Icon}"
                                       Foreground="White"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Recent Activity"
                                       Style="{StaticResource TitleTextStyle}"
                                       FontSize="16"
                                       Margin="0"
                                       AutomationProperties.HeadingLevel="Level2"
                                       AutomationProperties.LiveSetting="Polite"/>
                            <TextBlock Text="Most recently crawled URL"
                                       Style="{StaticResource CaptionTextStyle}"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                        <Border Grid.Row="1"
                                Background="{StaticResource SurfaceAltBrush}"
                                BorderBrush="{StaticResource BorderLightBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="16"
                                SnapsToDevicePixels="True">
                            <TextBlock Text="{Binding RecentActivity}"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"
                                       Style="{StaticResource BodyTextStyle}"
                                       FontFamily="Consolas"
                                       FontSize="13"
                                       ToolTip="{Binding RecentActivity}"/>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <Border Grid.Row="5"
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderLightBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="24"
                    CornerRadius="0,0,8,8"
                    SnapsToDevicePixels="True">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            KeyboardNavigation.TabNavigation="Local">
                    <Button Command="{Binding StartCrawlCommand}"
                            IsEnabled="{Binding IsCrawling, Converter={StaticResource InverseBooleanConverter}}"
                            Style="{StaticResource PrimaryButton}"
                            Height="56"
                            Padding="40,16"
                            MinWidth="180"
                            Margin="0,0,16,0"
                            TabIndex="0"
                            IsDefault="True"
                            AutomationProperties.Name="Start Crawl"
                            AutomationProperties.HelpText="Begin crawling the website with current configuration"
                            ToolTip="Begin crawling (F6)">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{StaticResource Icon.Play}"
                                       Style="{StaticResource Icon}"
                                       Width="20" 
                                       Height="20"
                                       FontSize="20"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="Start Crawl" 
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding PauseResumeCommand}"
                            IsEnabled="{Binding IsCrawling}"
                            Style="{StaticResource SecondaryButton}"
                            Height="56"
                            Padding="40,16"
                            MinWidth="180"
                            Margin="0,0,16,0"
                            TabIndex="1"
                            AutomationProperties.Name="{Binding PauseResumeButtonText}"
                            AutomationProperties.HelpText="Pauses or resumes the active crawl"
                            ToolTip="{Binding PauseResumeButtonText}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding PauseResumeButtonIcon}"
                                       Style="{StaticResource Icon}"
                                       Width="20" 
                                       Height="20"
                                       FontSize="20"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding PauseResumeButtonText}" 
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding StopCrawlCommand}"
                            IsEnabled="{Binding IsCrawling}"
                            Style="{StaticResource DangerButton}"
                            Height="56"
                            Padding="40,16"
                            MinWidth="180"
